/* pages/about/about.wxss */
.product{
  padding: 0rpx 20rpx 20rpx;
}
.about{
  background-color: white;
  border-radius: 15rpx;
  padding: 30rpx;
  overflow: hidden;
  margin-top: 20rpx;
}
.axian{
  width: 8rpx;
  height: 32rpx;
  background-color: #2083C9;
  margin-right: 15rpx;
}
.atitle{
  color: #2083C9;
  font-size: 32rpx;
}
.aboutcon{
  color: #999;
  margin-top: 30rpx;
}
.abanner{
  margin-top: 20rpx;
  line-height: 50rpx;
}
.ablist>view:nth-child(1){
  width: 120rpx;
  font-weight: bold;
  text-align: left;
  margin-right: 10rpx;
}
.ablist>view:nth-child(2){
  color: #999;
}
.ayanzheng{
  width: 90%;
  height: 80rpx;
  margin-left: 5%;
  background-color: #2083C9;
  color: white;
  line-height: 80rpx;
  border-radius: 10rpx;
  margin-top: 30rpx;
  text-align: center;
  font-size: 34rpx;

}
/*—————————————底部部分开始———————————————*/
.ahpang{
  background-color: #2083C9;
  color: white;
  position: fixed;
  right: 3%;
  top: 40%;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 26rpx;
  z-index: 10;
  padding: 0rpx;
  line-height: 30rpx;
}
.ahpang2{
  background-color: #2083C9;
  color: white;
  position: fixed;
  right: 3%;
  top: 50%;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 26rpx;
  z-index: 10;
}
.ahpang3{
  background-color: #2083C9;
  color: white;
  position: fixed;
  right: 3%;
  top: 60%;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 26rpx;
  z-index: 10;
}
.ahpang2>image{
  width: 28rpx;
  height: 28rpx;
}
/*————————————弹框——————————  */
.abomb{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  top: 0rpx;
  left: 0rpx;
  bottom: 0rpx;
  right: 0rpx;
  z-index: 12;
  display: flex;
  justify-content: center;
  align-items: center;
}
.abombox{
  background-color: white;
  width: 75%;
  height: 550rpx;
  border-radius: 15rpx;
  padding: 30rpx 40rpx;
  color: #999;
  position: relative;
}
.shanchu{
  width: 50rpx;
  height: 50rpx;
  border: 2rpx solid #FFF6DE;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  top: -15rpx;
  right: -15rpx;
}
.shanchu>image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.abombtitle{
  text-align: center;
  font-weight: bold;
  font-size: 34rpx;
}
.abgantan{
  margin-right: 10rpx;
}
.abremark{
  margin-top: 30rpx;
  font-size: 26rpx;
}
.abinput{
  border: 2rpx solid #ccc;
  height: 60rpx;
  border-radius: 10rpx;
  margin-top: 30rpx;
  background-color: #f5f5f5;
  overflow: hidden;
}
.abinput2{
  margin-top: 20rpx;
}
.abinput3{
  border: 2rpx solid #ccc;
  height: 60rpx;
  border-radius: 10rpx;
  background-color: #f5f5f5;
  overflow: hidden;
}
.abinput{width: 100%;}
.abinput3{width: 380rpx;}
.abinput3>view,.abinput>view{
  width: 150rpx;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  border-right: 2rpx solid #ccc;
  background-color: #ffffff;
}
.abinput>input{
  padding-left: 20rpx;
  line-height: 60rpx;
}
.abinput3>input{
  width: 180rpx;
  padding-left: 20rpx;
}
.abyan{
  width: 150rpx;
  border: 2rpx solid #ccc;
  margin-left: 30rpx;
  text-align: center;
  height: 60rpx;
  border-radius: 10rpx;
  line-height: 60rpx;
}
.abshenbtn{
  background: linear-gradient(to right, #2083c9 , #3fa0e4); /* 标准的语法 */
  color: white;
  border-radius: 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  margin-top: 30rpx;
}
.abaohu{
  margin-top: 15rpx;
}
/* ------------底部部分------------- */
.footbox1{
  width: 100%;
  height: 115rpx;
}
.foot1{
  width: 101%;
