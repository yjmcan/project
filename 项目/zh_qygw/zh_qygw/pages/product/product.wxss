/* pages/product/product.wxss */
.product{
  padding: 0px 20rpx 20rpx;
}
.psearch{
  background-color: white;
  border-radius: 15rpx;
  overflow: hidden;
  height: 80rpx;
  margin-top: 20rpx;
}
.psearch>input{
  margin-left: 30rpx;
  font-size: 26rpx;
  color: #666;
  width: 100%;
}
.pseabtn{
  background-color: #2083C9;
  height: 100%;
  width: 200rpx;
  text-align: center;
  line-height: 80rpx;
  color: #ffffff;
  border-radius: 15rpx;
  font-size: 26rpx;
}
.productbox{
  background-color: white;
  border-radius: 15rpx;
  overflow: hidden;
  margin-top: 20rpx;
  display: flex;
  padding: 20rpx;
}
.productbox>image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
}
.pright{
  margin-left: 30rpx;
  padding-top: 20rpx;
  width: 450rpx;
}
.prightitle{
  display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
}
.pmoney{
  color: #666;
  font-size: 26rpx;
  margin-top: 30rpx;
}
.pmoney>text{
  color: #FF4F01;
  font-weight: bold;
  font-size: 28rpx;
  margin: 0rpx 10rpx;
}
.pfoot{
  text-align: center;
  color: #999;
  margin-top: 20rpx;
  background-color: white;
  padding: 20rpx 0rpx;
}

/* 热门模块开始 */
.marry {
  width: 100%;
  height: auto;
  background-color: white;
  margin-top: 20rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
  overflow-x: scroll;
  white-space:nowrap;
}
.lunItem {
  padding: 1rpx;
  flex: 1;
  margin-right: 20rpx;
}
.luntext {
  font-size: 30rpx;
}
.proitem {
  padding: 15rpx 30rpx;
  position: relative;
  text-align: center;
}
.proitem.weuibaron {
  color: #2083C9;
  position: relative;
  border-bottom: 5rpx solid #2083C9;
}
.zheline.block {
  display: block;
  background-color: #2083C9;
}
.zheline {
  background-color: #2083C9;
  height: 5rpx;
  width: 74%;
  position: absolute;
  bottom: 0rpx;
  left: 14%;
  display: none;
}
.prosearch1{
  max-height: 100rpx;
  background-color: white;
  padding: 20rpx;
  margin-top: 2rpx;
  border-radius: 15rpx;
  width: 94%;
}
.prosearch2{
  background-color: white;
  padding: 20rpx;
  margin-top: 2rpx;
  border-radius: 15rpx;
}

/* ------------底部部分------------- */
.footbox1{
  width: 100%;
  height: 115rpx;
}
.foot1{
  width: 101%;
  height: 95rpx;
  position: fixed;
  bottom: 0rpx;
  left: -1rpx;
  background-color: white;
  font-size: 24rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #666;
  border-top: 1rpx solid #ddd;
  z-index: 11;
}
.footlist1{
  width: 20%;
}
.footlist1>image{
  width: 45rpx;
