/* pages/dynamic/dynamic.wxss */
.product{
  padding: 20rpx;
}
.dbanner{
  background-color: white;
  border-radius: 15rpx;
  padding: 0rpx 30rpx;
  overflow: hidden;
  font-size: 26rpx;
}
.dblist:last-child{
  border: none;
}
.dblist>view:nth-child(1){
  width: 480rpx;
  display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
}
.pfoot{
  text-align: center;
  color: #999;
  margin-top: 20rpx;
  background-color: white;
  padding: 20rpx 0rpx;
}
.dblist{
  border-bottom: 1rpx solid #eee;
  height: 100rpx;
}

/* 热门模块开始 */
.marry {
  width: 100%;
  height: auto;
  background-color: white;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
  overflow-x: scroll;
  white-space:nowrap;
  margin-bottom: 20rpx;
}
.lunItem {
  padding: 1rpx;
  flex: 1;
  margin-right: 20rpx;
}
.luntext {
  font-size: 30rpx;
}
.proitem {
  padding: 15rpx 30rpx;
  position: relative;
  text-align: center;
}
.proitem.weuibaron {
  color: #2083C9;
  position: relative;
  border-bottom: 5rpx solid #2083C9;
}
.zheline.block {
  display: block;
  background-color: #2083C9;
}
.zheline {
  background-color: #2083C9;
  height: 5rpx;
  width: 74%;
  position: absolute;
  bottom: 0rpx;
  left: 14%;
  display: none;
}

/* ------------底部部分------------- */
.footbox1{
  width: 100%;
  height: 115rpx;
}
.foot1{
  width: 101%;
  height: 95rpx;
  position: fixed;
  bottom: 0rpx;
  left: -1rpx;
  background-color: white;
  font-size: 24rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #666;
  border-top: 1rpx solid #ddd;
  z-index: 11;
}
.footlist1{
  width: 20%;
}
.footlist1>image{
  width: 45rpx;
  height: 45rpx;
}