/* zh_qygw/pages/mould3/contact3/contact3.wxss */
page{
  background-color: white;
}
.home{
  width: 100%;
  overflow-x: hidden;
}
.header{
  position: relative;
  width: 100%;
  height: 300rpx;
}
.headerback{
  width: 100%;
  height: 300rpx;
  position: absolute;
  z-index: 1;
  left: 0rpx;
  top: 0rpx;
  background-color: #abcdef;
}
.heabox{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 2;
  left: 0rpx;
  top: 0rpx;
  display: flex;
  align-items: center;
  color: white;
  font-size: 50rpx;
  justify-content: center;
}
.conintro{
  padding: 20rpx;
  font-size: 34rpx;
  color: #666;
  line-height: 50rpx;
  border-bottom: 2rpx solid #eee;
}
.introtitle{
  text-align: center;
  font-size: 38rpx;
  margin-bottom: 30rpx;
}
.introtext{
  text-indent: 2em;
}

/*—————————————————版块部分—————————————————*/
.hsection{
  background-color: white;
  padding-bottom: 1rpx;
  margin-top: 30rpx;
}
.hsectitle{
  background-color: #F3F3F3;
  height: 70rpx;
  font-weight: bold;
  font-size: 38rpx;
  color: #0B5394;
  display: flex;
  align-items: center;
}
.hsecxian{
  width: 10rpx;
  height: 70rpx;
  margin-right: 30rpx;
  background-color: #0B5394;
}
.hsecprogram3{
  display: flex;
  flex-wrap: wrap;
  padding: 5rpx 30rpx;
  color: #333;
}
.hsecprogram3>.flex3{
  width: 33%;
}
.hsecplist{
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  height: 95rpx;
  display: flex;
  align-items: center;
}
.hsecplist>image{
  width: 40rpx;
  height: 30rpx;
  margin-left: 20rpx;
}
.hsecname{
  text-indent: 2em;
}
.hsremark{
  text-align: center;
  color: #999;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  line-height: 45rpx;
}
.hsremark>view:nth-child(2){
  color: #F4CCCC;
}
#map{
  width: 100%;
  height: 400rpx;
}

.fuwuremark{
  color: #CCCCCC;
  margin:70rpx 0rpx 40rpx 0rpx;
  text-align: center;
}
.banquan{
  color: white;
  text-align: center;
  background-color: #0C5395;
  padding: 40rpx 0rpx;
}
.bqfont1{
  font-size: 34rpx;
  margin-top: 15rpx;
}
