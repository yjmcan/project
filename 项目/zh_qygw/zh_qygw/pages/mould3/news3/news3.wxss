/* zh_qygw/pages/mould3/news3/news3.wxss */
.fuwu3{
  width: 100%;
  overflow-x: hidden;
}
.header{
  background-color: #abcdef;
  width: 100%;
  height: 300rpx;
}
.header>image{
  width: 100%;
  height: 100%;
}
/* ------------新闻内容部分------------- */
.news{
  background-color: white;
  padding: 20rpx 20rpx 40rpx;
}
.newslist{
  display: flex;
  margin-bottom: 40rpx;
}
.newsimg{
  width: 270rpx;
  height: 180rpx;
}
.newsbox{
  width: 410rpx;
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.newstitle{
  color: #666;
  font-size: 32rpx;
  line-height: 45rpx;
}
.newstime{
  color: #999;
}
.newsdi{
  color: #CCCCCC;
  margin-top: 80rpx;
  text-align: center;
}

/* ------------版权部分------------- */
.banquan{
  color: white;
  text-align: center;
  background-color: #0C5395;
  padding: 40rpx 0rpx;
}
.bqfont1{
  font-size: 34rpx;
  margin-top: 15rpx;
}

/* ------------底部部分------------- */
.footbox{
  width: 100%;
  height: 115rpx;
}
.foot{
  width: 101%;
  height: 95rpx;
  position: fixed;
  bottom: 0rpx;
  left: -1rpx;
  background-color: white;
  font-size: 24rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #666;
  border-top: 1rpx solid #ddd;
}
.footlist{
  width: 33.3%;
}
.footlist>image{
  width: 45rpx;
  height: 45rpx;
}





