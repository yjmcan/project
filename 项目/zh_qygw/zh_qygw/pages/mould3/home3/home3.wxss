/* zh_qygw/pages/mould3/home3/home3.wxss */
.muban3{
  width: 100%;
  overflow-x: hidden;
  font-size: 30rpx;
}
/*首页轮播图  */
.newest_content {
  width: 80%;
  height: 50rpx;
  float: left;
  line-height: 50rpx;
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #333;
}
.swiper-container {
  position: relative;
  width: 100%;
  height: 360rpx;
}
.swiper-container .swiper {
  height: 360rpx;
}
.swiper-container .swiper .img {
  width: 100%;
  height: 100%;
}
.dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  /* background: #000; */
  width: 238rpx;
  margin: auto;
  border-radius: 10rpx;
  height: 20rpx;
  justify-content: center;
}
.dot {
  margin: 4rpx 8rpx;
  width: 30rpx;
  height: 6rpx;
  background: rgb(255, 255, 255);
  border: rgb(218, 69, 70) solid 1rpx;
  border-radius: 8rpx;
  transition: all 0.6s;
}
.active {
  width: 30rpx;
  background: #f80;
}

.ad {
  margin-bottom: 2rpx;
  height: 64rpx;
  /* background-color: greenyellow; */
  text-align: top;
  background-color: white;
  overflow: hidden;
}

/*—————————————————公告部分—————————————————*/
.ad-icon {
  line-height: 64rpx;
  margin-top: 15rpx;
  margin-left: 30rpx;
  float: left;
  height: 35rpx;
  width: 40rpx;
}

.adinfo {
  margin-left: 20rpx;
  float: left;
  font-size: 26rpx;
  margin-top: 20rpx;
  height: 30rpx;
  line-height: 30rpx;
  width: 650rpx;
}
.adinfo rich-text{
  width: 100%;
}
.nav_index_text {
  margin-top: 15rpx;
  font-size: 24rpx;
}

/*———————————导航部分———————————*/
.navlist{
  background-color: white;
  padding-bottom: 20rpx;
}
.navbox{
  padding: 40rpx 0rpx;
  display: flex;
  align-items: center;
}
.navimg{
  width:100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
  background-color: #01538D;
}
.navbox>.flex3{
  width: 20%;
  text-align: center;
  color: #999;
}
.wxback{
  width: 100%;
  height: 230rpx;
  background-color: #01538D;
}
.hcontent{
  padding: 50rpx 30rpx;
  color: #666;
}
.hctitle{
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
}
.hctext{
  line-height: 50rpx;
  margin-top: 20rpx;
}
.hcbanner{
  width: 100%;
  height: 300rpx;
}
.hcbanner>image{
  width: 100%;
  height: 100%;
}

/*—————————————————版块部分—————————————————*/
