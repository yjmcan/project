/* pages/fenxiao/fenxiao.wxss */
.fheader{
  position: fixed;
  height: 100%;
}
.fximg{
  width: 100%;
  height: 100%;
  background-color: #FFF4A2;
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  z-index: 2;
}
.fxcontent{
  position: absolute;
  z-index: 10;
  width: 100%;
  height: 54%;
  top: 46%;
}
.fxtopbox{
  background-color: #FD8936;
  color: white;
  border-radius: 50rpx;
  padding: 15rpx 60rpx;
  font-size: 36rpx;
  border: 1rpx solid #FF4C41;
}
.fxfont1{
  color: #FD8936;
  margin: 25rpx 0rpx;
  font-size: 30rpx;
}
.fxcode{
  width: 250rpx;
  height: 250rpx;
  background-color: white;
  border: 1rpx solid #FF4C41;
}
.fxyaoqing{
  color: #fff;
  font-weight: bold;
  font-size: 38rpx;
  background: -webkit-linear-gradient(#FF7269, #FF423C);
  background: linear-gradient(#FF7269, #FF423C);
  padding: 25rpx 0rpx 30rpx;
  border-radius: 60rpx;
  text-align: center;
  width: 80%;
  margin-top: 25rpx;
  box-shadow: 0rpx 10rpx 0rpx #D81F1C;
}












