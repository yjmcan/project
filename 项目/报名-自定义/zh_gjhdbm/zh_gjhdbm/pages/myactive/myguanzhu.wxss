/* pages/myactive/myguanzhu.wxss */
page{
  background-color: #F9F9F9;
}
.index{
  width: 100%;
  overflow-x: hidden;
}
/* —————————————热门模块开始————————————— */
.marry {
  background-color: white;
  font-size: 28rpx;
  padding: 0rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.proitem {
  padding: 15rpx 0rpx;
  position: relative;
  text-align: center;
  font-size: 32rpx;
}
.proitem.weuibaron {
  color: #F66926;
  position: relative;
  font-weight: bold;
  border-bottom: 6rpx solid #F66926;
}

/* —————————————活动内容部分——————————— */
.mybanner{
  background-color: white;
  margin-top: 20rpx;
}
.mybtop{
  padding: 20rpx;
  display: flex;
}
.mybimg{
  width: 35%;
  height: 160rpx;
  border-radius: 6rpx;
}
.mybtopinfo{
  width: 63%;
  padding-left: 2%;
}
.mybtitle{
  font-weight: bold;
  font-size: 26rpx;
}
.mybicon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.mybfont1{
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}
.myjinxing,.myjinxing2{
  padding: 0rpx 15rpx;
  font-size: 18rpx;
  font-weight: bold;
  line-height: 25rpx;
  border-radius: 6rpx;
}
.sign_up{
  border: 3rpx solid #F66926;
  color: #F66926;
}
.sign_over{
  border: 3rpx solid #e5e5e5;
  color: #999;
}
.myjinxing2{
  border: 3rpx solid #666;
  color: #666;
}
.myjinxingbox{
  margin-top: 10rpx;
}
.mybfont2{
  color: #F66926;
  font-size: 26rpx;
}
.zanwu{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.zanwubox{
  padding-top: 250rpx;
}

