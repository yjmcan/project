.head{
  width: 100%;
  height: 100rpx;
  background: #fff;
}
.head input{
  width: 70%;
  height: 60rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  /* text-align: center; */
  text-indent: 20rpx;
  left: 5%;
  font-size: 30rpx;
  border-radius: 10rpx;
  border: 2rpx solid #f66925;
}
.head text{
  height: 60rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  padding: 0 30rpx;
  border-radius: 8rpx;
  color: #fff;
  left: 80%;
  line-height: 60rpx;
  background: #f66925;
}
.search_list:first-child{
  margin-top: 20rpx;
}
.search_list{
  padding: 20rpx 20rpx;
  background: #fff;
  border-bottom: 2rpx solid #f9f9f9;
}
.search_list image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.search_list>view{
  display: inline-block;
  vertical-align: middle;
}
.search_list>view:nth-child(1){
  width: 80rpx;
  height: 80rpx;
}
.search_list>view:nth-child(2){
  line-height: 80rpx;
  height: 80rpx;
  margin-left: 20rpx;
}