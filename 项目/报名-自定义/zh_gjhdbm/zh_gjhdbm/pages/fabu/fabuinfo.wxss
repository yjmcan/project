/* pages/fabu/fabuinfo.wxss */

page {
  background-color: white;
}

.index {
  width: 100%;
  overflow-x: hidden;
}

.fiheaderwai {
  width: 100%;
  height: 90rpx;
  position: relative;
}

.fiheaderimg {
  width: 100%;
  height: 100%;
}

.fiheader {
  width: 100%;
  height: 90rpx;
  display: flex;
  position: absolute;
  z-index: 4;
  left: 0rpx;
  top: 0rpx;
}

.fihbox1, .fihbox2, .fihbox3 {
  height: 100%;
  position: relative;
  color: white;
  font-weight: bold;
  text-align: center;
  line-height: 90rpx;
}

.fihbox1 {
  /* background-color: #A8A9AD; */
  width: 33%;
  margin-right: 1%;
}

.fihbox2 {
  /* background-color: #EF7023; */
  width: 32%;
  margin-right: 1%;
}

.fihbox3 {
  /* background-color: #A8A9AD; */
  width: 33%;
}

.fbimg {
  width: 403rpx;
  height: 383rpx;
}

.fihbox {
  padding: 150rpx 0rpx 0rpx;
}

.fabuliji {
  border-radius: 10rpx;
  padding: 15rpx 30rpx;
  background-color: #f76927;
  color: white;
  text-align: center;
  margin-top: 100rpx;
}
.fabuliji button{
  width: 100%;
  background: none;
  height: 100%;
  color: white;
  padding: 0;
  line-height: 1;
}
.fabuliji button::after{
  border: none;
}
.fabufont1 {
  color: #999;
  font-weight: bold;
  margin-top: 15rpx;
}

.fabufont2 {
  font-weight: bold;
  font-size: 36rpx;
  margin-top: 50rpx;
}

.fabubot {
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  position: fixed;
  height: 100%;
  left: 0rpx;
  top: 0rpx;
  z-index: 5;
}

.botbox {
  width: 100%;
  height: 400rpx;
  background-color: white;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
}

.botadd {
  text-align: center;
  border-bottom: 1rpx solid #eee;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
}

.botquxiao {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.botquxiaoin {
  text-align: center;
  width: 90%;
  height: 70rpx;
  border: 1rpx solid #eee;
  font-weight: bold;
  color: #666;
  border-radius: 10rpx;
  line-height: 70rpx;
}

.botsection {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  font-weight: bold;
  font-size: 24rpx;
}

.botcontent {
  margin-left: 80rpx;
}

.botmenu {
  width: 50rpx;
  height: 50rpx;
  padding: 20rpx;
  border-radius: 50%;
  border: 1rpx solid #eee;
  margin-bottom: 15rpx;
}

.botmenu>image {
  width: 100%;
  height: 100%;
}

.events_img {
  width: 100%;
  height: auto;
}

.events_img>view {
  width: 80%;
  height: 250rpx;
  border-radius: 15rpx;
  margin: 90rpx auto;
  overflow: hidden;
  border: 4rpx solid orange;
}

.img {
  width: 100%;
  height: 100%;
}

textarea {
  width: 95%;
  height: 95%;
}

.add_info {
  width: 100%;
  height: 80rpx;
  border: none;
}

.add {
  width: 60rpx;
  height: 60rpx;
}

.delete {
  width: 60rpx;
  height: 60rpx;
  bottom: 20rpx;
  left: 40rpx;
  border-radius: 50%;
  overflow: hidden;
  z-index: 500;
}

.delete view {
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.2;
  z-index: 50;
}
.delete image {
  width: 60%;
  height: 60%;
  z-index: 500;
}
.add_info button{
  position: absolute;
  display: inline-block;
  padding: 15rpx 30rpx;
  border-radius: 10rpx;
  line-height: 1;
  background: #f76927;
  color: #fff;
  right: 20rpx;
}
.add_info button::after{
  border: none;
}
