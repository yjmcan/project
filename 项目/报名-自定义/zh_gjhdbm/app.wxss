/*—————————底部固定部分—————————  */
.bmfoot2{
  width: 100%;
  height: 110rpx;
}
.bmfoot{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 110rpx;
  background-color: white;
  font-size: 24rpx; 
  z-index: 9900;
  box-shadow: 0rpx -5rpx 15rpx #c9c9c9;
}
.bmfootimg{
  width: 38rpx;
  height: 28rpx;
  margin-bottom: 5rpx;
}
.bmfootimg2{
  width: 30rpx;
  height: 32rpx;
  margin-bottom: 5rpx;
}
.bmfont1{
  color: #F66926;
  width: 50%;
}
.bmfont2{
  color: #999;
  width: 50%;
}
.bmfootbox{
  width: 100%;
  height: 100rpx;
}
.bmfootbox>view{
  width: 20%;
  height: 100%;
  display: inline-block;
  vertical-align: middle;
}
.bmfootbox>view view:nth-child(1){
  width: 100%;
  height: 70%;
}
.bmfootbox>view view:nth-child(2){
  width: 100%;
  height: 40%;
  line-height: 36rpx;
  font-size: 22rpx;
  text-align: center;
}
.bmfootbox>view view image{
  width: 40rpx;
  height: 40rpx;
}
.fabu image{
  width: 110rpx;
