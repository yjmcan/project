/**app.wxss**/

page {
  background-color: #f9f9f9;
  font-family: "微软雅黑";
  font-size: 28rpx;
  color: #333;
}

.fxbox {
  width: 100%;
  overflow-x: hidden;
}

.flex_bet {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex_center {
  display: flex;
  align-items: center;
}

.flex1 {
  display: flex;
  justify-content: center;
  align-items: center;
}
.selsects{
  color: #F66926;
}
.flex2 {
  display: flex;
  flex-wrap: wrap;
}

.flex3 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.flex4 {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.yghidden {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
}
.copyright{
  width: 100%;
  height: 50rpx;
  text-align: center;
  vertical-align: middle;
  line-height: 50rpx;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
  color: #666;
  font-size: 24rpx;
}
.copyright>image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  border-radius: 50%;
}

/**app.wxss**/

.gobyndmulit {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/*单行文本超出隐藏*/

.gobyndsingle {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/*左上角边框  */

.border_left_top {
  border-top-left-radius: 10rpx;
}
/*左下角边框  */

.border_left_bottom {
  border-bottom-left-radius: 10rpx;
}
/*右上角边框  */

.border_right_top {
  border-top-right-radius: 10rpx;
}
/*右下角边框  */

.border_right_top {
  border-bottom-right-radius: 10rpx;
}
