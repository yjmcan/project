/*加载动画  */
.load{
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  z-index: 555555555555555555555;
  background: #fff;
}
.load image{
  width: 450rpx;
  height: 250rpx;
}
/*没有订单  */
.none_order{
  width: 100%;
  height: 400rpx;
  margin-top: 100rpx;
}
.none_order image{
  width: 200rpx;
  height: 250rpx;
  display: block;
  margin: 0 auto 0;
}
.none_order view{
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}
/*遮罩  */
.fixed{
  position: fixed;
  width: 100%;
  height: 100%;
  bottom: 0;
  z-index: 500000000000;
}
.fixed>view:nth-child(1){
  width: 100%;
  height: 100%;
  top: 0;
  z-index: 500000000;
}
.fixed>view:nth-child(2){
  z-index: 5000000000000;
}
