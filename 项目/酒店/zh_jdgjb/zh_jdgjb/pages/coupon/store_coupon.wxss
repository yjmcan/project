/* zh_jd/pages/coupon/coupon.wxss */
page{
  background: #f9f9f9;
  height: 100%;
}
.users{
  width: 85%;
  height: 70rpx;
  line-height: 70rpx;
  text-indent: 50rpx;
  font-size: 30rpx;
  background: #fff;
  border-radius: 10rpx;
  margin: 0rpx auto 0;
}
.effective,already,overdue{
  color: #182E8F
}
.default{
  color: #000;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
.container{
  width: 100%;
  height: 100%;
  padding-top: 120rpx;
}
.header{
  width: 100%;
  height: 100rpx;
  margin: 0 auto;
  top: 0;
}
.background{
  width: 100%;
  height: 60%;
  top: 0;
  background: #182E8F;
  z-index: 1;
}
.option{
  width: 95%;
  height: 100%;
  background: #fff;
  border-radius: 10rpx;
  margin: 0 auto;
  z-index: 100;
}
.option_son{
  width: 100%;
  height: 30rpx;
  display: flex;
}
.option_son>view{
  flex:3;
  border-right: 1rpx solid #000;
  text-align: center;
  line-height: 30rpx;
  font-size: 28rpx;
}
.option_son>view:nth-child(3){
  border: none;
}
.body{
  width: 95%;
  height: auto;
  /* background: #fff; */
  margin: 20rpx auto;
  padding-top:20rpx;
  padding-bottom: 20rpx;
}
.coupons{
  width: 90%;
  height: auto;
  margin: 0 auto;
}
.color{
  width: 95%;
  height: 40rpx;
  display: flex;
  margin: 20rpx auto;
}
.color>view{
  flex:5;
  text-align: center;
  position: relative;
}
.color>view view{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
}
page{
  background: #f9f9f9;
}
.coupons_son {
  width: 95%;
  height: 200rpx;
  margin: 20rpx auto;
}

.coupons_son>view {
  display: inline-block;
  vertical-align: middle;
}

.coupons_son>view {
  height: 100%;
}
.coupons_son>view image{
  width: 100%;
  height: 100%;
}
.coupons_son>view:nth-child(1) {
  width: 100%;
  height: 100%;
  z-index: -10;
}
.coupons_son>view:nth-child(2) {
  width: 30%;
}

.coupons_son>view:nth-child(3) {
  width: 70%;
  text-indent: 20rpx;
}

.coupons_son>view:nth-child(4) {
  width: 25%;
  right: 0;
}

.son_left>view {
  text-align: center;
  width: 100%;
}

.son_left>view:nth-child(1) {
  height: 140rpx;
  line-height: 160rpx;
  font-size: 60rpx;
  color: #fff;
}

.son_left>view:nth-child(2) {
  height: 50rpx;
  line-height: 54rpx;
  font-size:22rpx;
  color: #fff;
}

.son_left>view text:nth-child(1) {
  font-size: 30rpx;
}

.son_left>view text:nth-child(2) {
  font-size: 55rpx;
  font-weight: bold;
}

.son_right>view {
  width: 100%;
}

.son_right>view:nth-child(1) {
  height: 80rpx;
  font-size: 35rpx;
  font-weight: bold;
  line-height: 80rpx;
}

.son_right>view:nth-child(2) {
  height: 30rpx;
  font-size: 22rpx;
  line-height: 30rpx;
  color: #aaa;
}

.son_right>view:nth-child(3) {
  height: 30rpx;
  font-size: 22rpx;
  line-height: 30rpx;
  color: #aaa;
  margin-top: 40rpx;
}
.not_user{
  line-height: 324rpx;
  text-align: right;
}
.not_user text{
  padding: 10rpx 20rpx;
  background: #182E8F;
  font-size: 22rpx;
  color: #fff;
}
/*没有优惠券  */
.none_coupon{
  width: 100%;
  height: auto;
  margin-top: 200rpx;
}
.none_coupon image{
  width: 300rpx;
  height: 200rpx;
  display: block;
  margin: 0 auto 0;
}
.none_coupon view{
  text-align: center;
  font-size: 24rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #999;
}
