.echange{
  padding: 40rpx 20rpx;
  height: 150rpx;
  background: #fff;
  border-bottom: 2rpx solid #e5e5e5;
}
.echange>view{
  display: inline-block;
  vertical-align: middle;
}
.echange>view:nth-child(1){
  width: 30%;
  height: 100%;
}
.echange>view:nth-child(2){
  width: 70%;
  height: 100%;
}
.echange>view image{
  width: 90%;
  height: 150rpx;
  border-radius: 10rpx;
}
.echange>view view{
  width: 100%;
  line-height: 50rpx;
  font-size: 28rpx;
  height: 50rpx;
  overflow-x: hidden;
}
.echange>view view text{
  display: inline-block;
  vertical-align: middle;
}
.echange>view view text:nth-child(3){
  font-size: 24rpx;
}
.express{
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
}
.express>view:nth-child(1){
  z-index: 500;
  background: #000;
  opacity: .5;
  width: 100%;
  height: 100%;
}
.express>view:nth-child(2){
  width: 80%;
  height: 200rpx;
  border-radius: 15rpx;
  background: #fff;
  z-index: 100000;
}
.express>view  view{
  width: 100%;
  height: 50%;
  line-height: 100rpx;
  text-indent: 20rpx;
}