/* zh_jd/pages/order/order.wxss */
.order_title{
  width: 100%;
  height: 120rpx;
  display: flex;
  border:2rpx solid #ccc;
}
.order_title>view{
  flex: 3;
  text-align: center;
  line-height: 120rpx;
  height: 100%;
  font-size: 30rpx;
  box-sizing: border-box;
}
.weuibaron{
  color: orange;
  border-bottom: 2rpx solid orange;
}
/*订单列表  */
.order_list{
  width: 100%;
  height: auto;
}
.order_list>view{
  width: 95%;
  height: auto;
  background: #fff;
  margin: 10rpx auto;
  border-radius: 8rpx;
}
/*订单详情  */
.order_info{
  width: 95%;
  height: 100%;
  margin: 0 auto 0;
  padding-top: 20rpx;
}
.order_info>view{
  display: inline-block;
  vertical-align: middle;
  overflow: hidden;
}
.order_info>view:nth-child(1){
  width: 28%;
  height: 200rpx;
  margin-right: 2%;
}
.order_info>view:nth-child(2){
  width: 70%;
  height: 200rpx;
}
.order_info>view:nth-child(3){
  width: 100%;
  height: 100rpx;
  border-top: 2rpx solid #f9f9f9;
}
.hotel_logo{
  width: 90%;
  height: 180rpx;
  left: 0;
  border-radius: 15rpx;
}
.info>view{
  width: 100%;
    overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.info>view:nth-child(1){
  height: 60rpx;
  line-height: 40rpx;
  font-size: 34rpx;
  font-weight: bold;
}
.info>view:nth-child(2){
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #999;
}
.info>view:nth-child(3){
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #999;
}
.info>view:nth-child(4){
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #999;
}
.order_state>view{
  width: 100%;
  height: 50rpx;
}
.order_state>view view{
  display: inline-block;
  vertical-align: middle;
  width: 50%;
  text-align: center;
  box-sizing: border-box;
  font-size: 30rpx;
}
.order_state>view view:nth-child(1){
  border-right: 2rpx solid #e5e5e5;
  color: orange;
}
.order_state>view view:nth-child(2){
  color: #999;
}