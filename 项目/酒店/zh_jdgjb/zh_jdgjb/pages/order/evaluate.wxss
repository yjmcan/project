/* zh_jdgjb/pages/order/evaluate.wxss */
.head{
  padding: 20rpx;
  height: auto;
  background: #fff;
}
.head textarea{
  width: 100%;
  height: 600rpx;
}
.head>view:nth-child(2){
  background: #fff;
  margin-top: 30rpx;
}
.evaluate_img{
  width: 25%;
  overflow: hidden;
  height: 180rpx;
  box-sizing: border-box;
  border-right: 2rpx solid #f9f9f9;
  display: inline-block;
  vertical-align: middle;
  margin-bottom: 20rpx;
}
.head>view view view{
  width: 100%;
  height: 50rpx;
  bottom: 0;
  left: 0;
  border: none;
}
.head>view view view view:nth-child(1){
  width: 100%;
  height: 100%;
  background: #000;
  z-index: 100;
  opacity: .5;
  top: 0;
  border: none;
}
.head>view view view view:nth-child(2){
  width: 100%;
  height: 100%;
  z-index: 10000;
  top: 0;
  border: none;
}
.head>view view view view image{
  width: 40rpx;
  height: 40rpx;
}
.add_img{
  border:4rpx solid rgb(122, 122, 122);
  border-radius: 10rpx;
  width: 25%;
  overflow: hidden;
  height: 180rpx;
  box-sizing: border-box;
  display: inline-block;
  vertical-align: middle;
  margin-bottom: 20rpx;
}
.evaluate{
  width: 100%;
  height: 100%;
}
.add_img image{
  width: 100rpx;
  height: 100rpx;
}
.head>view:last-child{
  right: 20rpx;
  top: 600rpx;
}
button{
  background: #182E8F;
  width: 90%;
  color: #fff;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}