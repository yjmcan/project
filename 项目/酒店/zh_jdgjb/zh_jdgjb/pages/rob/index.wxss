@import '../public.wxss';
.container{
    padding-bottom: 120rpx;
}
.robImg {
    width: 100%;
    height: 300rpx;
}

.robTime {
    /* background: #fcc803; */
    background: #f7f7f7;
}

.robImg image {
    width: 100%;
    height: 100%;
}

.robTimeImg {
    width: 40rpx;
    height: 40rpx;
}

.robMoney {
    width: 200rpx;
    height: 52rpx;
    right: 0;
    top: 0;
}

.robMoney image {
    width: 100%;
    height: 100%;
    z-index: 10;
}

.robMoney view {
    z-index: 100;
    width: 100%;
    height: 100%;
    line-height: 52rpx;
}
.foot{
  position: fixed;
  z-index: 99000;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  background: #fff;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #eee;
  background-color: white;
  padding: 15rpx 0rpx 10rpx;
  font-size: 22rpx;
}
.footbox{
  width: 50%;
}
.footban{
  width: 100%;
  height: 340rpx;
}
.footbox>image{
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}
