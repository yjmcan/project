.mine_money{
  padding: 20rpx;
  font-size: 35rpx;
  /* border-bottom: 2rpx solid #e5e5e5; */
   background: #fff; 
}
.mine_money>view{
  display: inline-block;
  vertical-align: middle;
  width: 50%;
}
.mine_money>view:nth-child(2){
  color: #1F50AF;
  text-align: right;
}
.Recharge{
  margin-top: 20rpx;
  margin-bottom: 130rpx;
}
.Recharge>view:nth-child(1){
  color: #999;
  font-size:40rpx;
  padding-bottom: 20rpx;
  text-align: center;
}
.Recharge>view:nth-child(2){
  padding: 20rpx;
}
swiper{
  width: 100%;
  height: 400rpx;
}
swiper image{
  width: 100%;
  height: 400rpx;
}
.sele{
  border: 2rpx solid #1F50AF;
}
.sele_c{
  color: #1F50AF;
}
.noe_sele_c{
  color: #666;
}
.noe_sele{
  border:2rpx solid #999;
}
.recharge_list{
  display: inline-block;
  vertical-align: middle;
  background: #fff;
  width: 47.5%;
  margin-bottom: 40rpx;
  border-radius: 15rpx;
  box-sizing: border-box;
  padding: 10rpx 0;
}
.recharge_list:nth-child(odd){
  margin-right: 5%;
}
.recharge_list>view:nth-child(1){
  font-size: 40rpx;
  text-align: center;
}
.recharge_list>view:nth-child(2){
  color: #999;
  height: 50rpx;
  font-size: 24rpx;
  text-align: center;
}
button{
  background: #1F50AF;
  color: #fff;
  position: fixed;
  bottom: 0;
  width: 100%;
  border-radius: 0;
  margin-top: 120rpx;
}