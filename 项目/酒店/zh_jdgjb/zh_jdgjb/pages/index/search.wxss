.search{
  width: 100%;
  height: 120rpx;
  position: relative;
  background: #fff;
}
.search view{
  width: 80%;
  height: 60rpx;
  border-radius: 50rpx;
  position: absolute;
  overflow: hidden;
  border: 4rpx solid orange;
}
.search view input{
  width: 100%;
  height: 95%;
  margin-left: 5%;
  color: #777;
  font-size: 26rpx;
}
.search_result{
  width: 100%;
  height: auto;
  min-height: 500rpx;
  background: #fff;
  margin-top: 20rpx;
}
