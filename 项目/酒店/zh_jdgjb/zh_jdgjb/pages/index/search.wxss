.result{
   padding: 20rpx 0 20rpx 20rpx;
   border-bottom: 2rpx solid #f9f9f9;
}
.result:last-child{
  border: none;
}
.none_result{
  width: 100%;
  height: 400rpx;
}
.none_result image{
  height: 300rpx;
  width: 50%;
  top: 20rpx;
}
.none_result>view{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    text-align: center;
    color: #ccc;
    bottom: 0;
}