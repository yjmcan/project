/* zh_jdgjb/pages/distribution/distribution.wxss */

.head {
  padding: 20rpx;
  height: 200rpx;
  background: linear-gradient(to right, rgb(43, 122, 252), rgb(101, 166, 255));
}

.head image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  display: block;
  margin: 40rpx auto 20rpx;
}

.head .user_name {
  width: 100%;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  padding: 0 0 100rpx 0;
}

.head .distribution_cost {
  width: 80%;
  height: auto;
  padding: 0 20rpx;
  background: #fff;
  border-radius: 15rpx;
  top: 150rpx;
}
.head .distribution_cost image{
  width: 150rpx;
  height: 150rpx;
}
.head .distribution_cost view:nth-child(1) {
  width: 200rpx;
  height: 200rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 50rpx;
  top: -100rpx;
  color: #000;
}

.head .distribution_cost view:nth-child(2) {
  color: #999;
  padding: 40rpx 0 0 0;
  font-size: 24rpx;
  margin-top: 130rpx;
}

.head .distribution_cost .put_forward {
  width: 100%;
  height: 60rpx;
}

.head .distribution_cost .put_forward text:nth-child(1) {
  font-size: 40rpx;
  color: #000;
  font-weight: bold;
  float: left;
}

.head .distribution_cost .put_forward text:nth-child(2) {
  font-size: 24rpx;
  color: rgb(43, 122, 252);
  float: right;
}

.head .distribution_cost .commission {
  width: 100%;
  height: 60rpx;
  clear: both;
  font-size: 24rpx;
  color: #999;
}

.head .distribution_cost .commission text:nth-child(1) {
  color: #999;
}

.head .distribution_cost .commission text:nth-child(2) {
  color: rgb(43, 122, 252);
}

.head .distribution_cost .commission text:nth-child(3) {
  color: rgb(43, 122, 252);
  float: right;
}

.body {
  margin-top: 280rpx;
  height: auto;
  background: #fff;
  padding: 50rpx 0;
}

.body .list {
  display: inline-block;
  vertical-align: middle;
  width: 50%;
  border-right: 2rpx solid #e5e5e5;
  box-sizing: border-box;
}

.body .border{
  width: 100%;
  height: 2rpx;
  background: #e5e5e5;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}
.body .list>image {
  width: 60rpx;
  height: 60rpx;
  margin-top: 5rpx;
  float: left;
  margin-left: 40rpx;
}

.body .list view:nth-child(2) {
  width: 200rpx;
  display: inline-block;
  height: 40rpx;
  font-size: 32rpx;
  margin-left:10rpx;
  color: #333;
}

.body .list view:nth-child(3) {
  width: 200rpx;
  display: inline-block;
  height: 40rpx;
  margin-left:10rpx;
  font-size: 24rpx;
  color: #999;
}
.body .none_border{
  border-right: none;
}

/*分享  */
.share{
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 500000000000000;
  height: 100%;
}
.share>view:nth-child(1){
  width: 100%;
  height: 400rpx;
  bottom: 0;
  background: #fff;
  z-index: 100;
}
.share>view:nth-child(2){
  width: 100%;
  height: 100%;
  bottom: 0;
  opacity: .5;
  z-index: 50;
  background: #000;
}
.share_mode>view{
  display: inline-block;
  vertical-align: middle;
}
.share_mode>view:nth-child(1){
  width: 50%;
  height: 300rpx;
}
.share_mode>view:nth-child(2){
  width: 50%;
  height: 300rpx;
}
.share_mode>view:nth-child(3){
  width: 100%;
  height: 100rpx;
  border-top: 2rpx solid #e5e5e5;
  line-height: 100rpx;
  text-align: center;
  color: #666;
  font-size: 30rpx;
}
.share_mode>view view{
  width: 200rpx;
  height: 200rpx;
  border: 2rpx solid #e5e5e5;
  text-align: center;
}
.share_mode>view view image{
  width: 90rpx;
  height: 90rpx;
  display: block;
  margin: 30rpx auto 30rpx;
}
.Preservation{
  width: 100%;
  height: 120rpx;
  position: fixed;
  z-index: 500000000000000000;
  bottom: 0;
  border-top: 2rpx solid #e5e5e5;
  text-align: center;
  line-height: 120rpx;
  background: #fff;
  font-size: 28rpx;
}
.share_mode>view view button{
  width: 100%;
  height: 100%;
  background: none;
  position: absolute;
  top: 0;
  z-index: 5000;
}
.share_mode>view view button::after{
  border: none;
}
.backgrod{
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 10000000;
}
.backgrod>view:nth-child(1){
  width: 100%;
  height: 100%;
  background: #000;
  opacity: .5;
  z-index: 555555555555;
}
.backgrod>view:nth-child(2){
  width: 50%;
  height: 400rpx;
  background: #fff;
  border-radius: 15rpx;
  z-index: 555555555555;
  text-align: center;
}
.backgrod>view image{
  width:350rpx;
  /* background: red; */
  height: 350rpx;
}