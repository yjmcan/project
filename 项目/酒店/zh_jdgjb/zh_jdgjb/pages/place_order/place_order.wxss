page {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  padding-bottom: 100rpx;
}

.hotel {
  width: 100%;
  height: 350rpx;
  background: #fff;
}

.hotel>view {
  width: 95%;
  margin-left: 5%;
}

.hotel_name {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 35rpx;
  color: #000;
}

.hotel_info {
  height: 60rpx;
  line-height: 55 rpx;
  font-size: 28rpx;
  color: #666;
}

.hotel_info image {
  width: 30rpx;
  height: 35rpx;
  display: block;
  float: left;
  padding: 5rpx 0 0 0;
}

.hotel_info view {
  float: left;
  width: 90%;
  text-indent: 8rpx;
}

.hotel_time {
  overflow: hidden;
}

.hotel_time>view {
  width: 40%;
  display: inline-block;
}

.hotel_time>view text {
  color: #182e8f;
}

.form_info {
  width: 100%;
  height: auto;
  background: #fff;
  margin-top: 20rpx;
}

.form_info>view {
  width: 95%;
  margin-left: 5%;
}

.form_info_child {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 2rpx solid #f9f9f9;
  box-sizing: border-box;
  overflow: hidden;
}

.form_info_child>view {
  float: left;
}

.form_info_child>view:nth-child(1) {
  width: 30%;
  color: #777;
}

.form_info_child>view:nth-child(2) {
  width: 70%;
}

.form_info_child>view input {
  width: 100%;
  height: 60rpx;
  margin-top: 20rpx;
}

.home_num>view:nth-child(1) {
  width: 30%;
  height: 100%;
}

.home_num>view:nth-child(2) {
  width: 40%;
  height: 100%;
}

.home_num>view:nth-child(3) {
  width: 30%;
  height: 100%;
}

.home_num>view image {
  width: 45rpx;
  height: 45rpx;
  padding: 30rpx 0 0 0;
}

.home_num>view {
  float: left;
}

.bottom_price {
  width: 100%;
  height: 120rpx;
  /* background: orange; */
  position: fixed;
  z-index: 1000;
  bottom: 0;
  left: 0;
}

.bottom_price>view {
  float: left;
  height: 100%;
  line-height: 120rpx;
}

.heji>view:nth-child(1){
  text-align: left;
  display: inline-block;
  vertical-align: middle;
  padding: 0 20rpx 0 40rpx;
}
.heji>view:nth-child(2){
  text-align: left;
  display: inline-block;
  vertical-align: middle;
}
.bottom_price>view view:nth-child(2){
  font-size: 40rpx;
}
.bottom_price>view:nth-child(1) {
  width: 60%;
  background: #fff;
}

.bottom_price>view:nth-child(2) {
  width: 40%;
  text-align: center;
  color: #fff;
  font-size: 35rpx;
}
