.picker text {
  display: inline-block;
  width: 45%;
  height: 100%;
}

.picker text:last-child {
  text-align: right;
}

.button1 {
  width: 100%;
  height: 100%;
  background: none;
  line-height: 120rpx;
  display: inline-block;
  border-radius: 0;
  color: #fff;
  font-size: 35rpx;
}
.button2 {
  width: 100%;
  height: 100%;
  background: none;
  line-height: 50rpx;
  display: inline-block;
  border-radius: 0;
  color: #fff;
  font-size: 32rpx;
}

button::after {
  border: none;
}

.back {
  position: fixed;
  width: 100%;
  height: 100%;
  opacity: 0.5;
  top: 0;
  background: #000;
  z-index: 1000000;
}

.see_more {
  position: fixed;
  width: 90%;
  height: auto;
  max-height: 500rpx;
  z-index: 1000000000000;
  border-radius: 10rpx;
  overflow: hidden;
  background: #fff;
  overflow-x: hidden;
  overflow-y: scroll;
  /* top: 400rpx; */
}

.see_more>view {
  padding: 0 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 2rpx solid #f9f9f9;
  box-sizing: border-box;
}

.see_more>view view:nth-child(1) {
  float: left;
}

.see_more>view view:nth-child(2) {
  float: right;
}
.fixed{
 
}
.fixed>view:nth-child(1){
  background: #000;
  opacity: .5;
}
.pay_mode{
  width: 80%;
  height: auto;
   overflow: hidden;
   background: #fff;
  margin-top: 45%;
  border-radius: 15rpx;
  margin-left: 10%;
  z-index: 50000000000;
  position: relative;
}
.pay_mode>view:nth-child(1){
  text-align: center;
  background: #e5e5e5;
  color: #333;
  padding: 20rpx 0;
}
.pay_mode>view:last-child{
  text-align: center;
  color: #fff;
  padding: 15rpx 0;
}
.mode{
  padding: 20rpx;
  border-bottom: 2rpx solid #e5e5e5;
}
.pay_mode image{
  display: inline-block;
  vertical-align: middle;
  width: 50rpx;
  margin-right: 20rpx;
  height: 50rpx;
}
.pay_mode icon{
  display: inline-block;
  vertical-align: middle;
  width: 40rpx;
  right: 20rpx;
  height: 40rpx;
}
