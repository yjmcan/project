page{
  background: #fff;
}
.none_order{
  padding-top: 130rpx;
}
/*酒店评价  */
.hotel_evaluate{
  width: 95%;
  padding: 20rpx 0;
  height: auto;
  margin: 0 auto 0;
  border-bottom: 2rpx solid #f9f9f9;
}
.evaluate_head{
  width: 100%;
  height: 100rpx;
}
.evaluate_head>view{
  display: inline-block;
  vertical-align: middle;
}
.evaluate_head>view:nth-child(1){
  width: 15%;
  height: 100%;
}
.evaluate_head>view image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  left: 0;
}
.user{
  width: 500rpx;
}
.user>view:nth-child(1){
  font-size: 28rpx;
}
.user>view:nth-child(2){
  font-size: 23rpx;
  color: #999;
}
.evaluate_content{
  width: 85%;
  margin-left: 15%;
  height: auto;
  padding: 20rpx 0;
  /* min-height: 100rpx; */
  /* font-weight: bold; */
  font-size: 24rpx;
}
.whole_evaluate{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  color: #E75119;
  text-align: center;
  font-size: 22rpx;
  background: #f9f9f9;
}
.evaluate_content>view{
  width: 33.333%;
  height: 180rpx;
  box-sizing: border-box;
  border-right: 2rpx solid #f9f9f9;
  margin-top: 4rpx;
  display: inline-block;
  vertical-align: middle;
}
.evaluate_content>view image{
  width: 100%;
  height: 100%;
}
.none_more{
  padding: 20rpx;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}