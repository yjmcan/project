/* zh_dianc/pages/seller/login.wxss */

page {
  width: 100%;
  height: 100%;
}

.main {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  z-index: 5200000;
}

.bgimg {
  width: 100%;
  height: 100%;
  display: block;
}

.head_img {
  position: absolute;
  top: 14%;
  width: 160rpx;
  height: 160rpx;
  z-index: 5000000000;
  border-radius: 50%;
}
.head_img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.headwz {
  position: absolute;
  top: 5%;
  left: 50%;
  font-size: 40rpx;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
  font-weight: bold;
  color: #666;
}

.login {
  position: absolute;
  width: 86%;
  top: 30%;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
}

.weui-cells {
  padding: 100rpx 50rpx;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  background: #fff;
}

.weui-cells:before {
  border-top: none;
}

.weui-cells:after {
  border-bottom: none;
}

.weui-cell {
  font-size: 30rpx;
  padding: 20rpx 0 0;
}

.weui-cell_input {
  padding-top: 20rpx;
}

.weui-label {
  width: 70rpx;
  height: 2.58823529em;
  display: flex;
  align-items: center;
}

.weui-label image {
  width: 35rpx;
  height: 40rpx;
}

.weui-btn {
  margin-top: 0;
  font-size: 35rpx;
}

button {
  line-height: 2.8;
  border-radius: 0;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}

button::after {
  border: none;
}

.back {
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
}

.back image {
  width: 100%;
  height: 100%;
}

.hdimg {
  width: 100%;
  height: 100%;
  bottom: 0;
  position: absolute;
  z-index: 1000;
  background: orange;
}

.weixin {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  position: absolute;
  bottom: -60rpx;
  background: #fff;
  font-size: 24rpx;
}

.weixin text {
  padding: 25rpx 80rpx;
  background: #ed414a;
  border-radius: 15rpx;
  color: #fff;
}

.ft {
  width: 100%;
  position: absolute;
  top: 84%;
  font-size: 35rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.ft image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.resite {
  width: 90%;
  height: auto;
  background: #fff;
  position: absolute;
  top: 34%;
  border-radius: 25rpx;
  overflow: hidden;
  /* border-radius: 15rpx; */
  left: 5%;
}

.resite>view:nth-child(1) {
  width: 90%;
  height: 240rpx;
}

.resite button {
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #fff;
  background: #ed414a;
  border-radius: 0;
  border-bottom-right-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
}

.resite_one {
  width: 100%;
  height: 120rpx;
  border-bottom: 1rpx solid #e5e5e5;
  box-sizing: border-box;
  position: relative;
}

.text {
  position: absolute;
  bottom: 20rpx;
  width: 100%;
  height: 50rpx;
}

.text>view:nth-child(1) {
  width: 15%;
  height: 100%;
  float: left;
}

.text>view:nth-child(2) {
  width: 85%;
  height: 100%;
  background: #fff;
  float: left;
}

.text input {
  width: 90%;
  height: 100%;
  margin: 0 auto 0;
  font-size: 30rpx;
}

.text image {
  width: 29rpx;
  height: 33rpx;
}

.werchat {
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  position: fixed;
  z-index: 45465456;
}

.werchat>view:nth-child(1) {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
}

.werchat>view:nth-child(2) {
  position: absolute;
  width: 75%;
  height: 270rpx;
  background: #fff;
}

.werchat>view view:nth-child(1) {
  width: 95%;
  height: 170rpx;
  margin: 0 auto 0;
  padding-top: 20rpx;
  color: #333;
  text-align: center;
  font-size: 28rpx;
  /* line-height: 170rpx; */
}

.text1 text {
  line-height: 50rpx;
  display: block;
  width: 100%;
  height: 80rpx;
}

.werchat>view view:nth-child(2) {
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #e5e5e5;
}

.text2 text {
  display: inline-block;
  text-align: center;
  width: 50%;
  height: 100%;
  box-sizing: border-box;
  line-height: 80rpx;
  font-size: 26rpx;
}

.text2 text:nth-child(1) {
  border-right: 1rpx solid #e5e5e5;
}
.wechat_login{
  margin: 0 auto 0;
  width: 90%;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 10rpx;
  top: 75%;
  /* background: #fff; */
  color: #fff;
  font-size: 30rpx;
}
.wechat_login>image{
  width: 100%;
  height: 100%;
}
