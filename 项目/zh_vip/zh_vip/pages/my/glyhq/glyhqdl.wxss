page{
  background: #efeff4;
}
.container{
  overflow-y: hidden;
}
.head{
  background:#fff;
  margin: 20rpx 20rpx; 
  padding-top: 1rpx;
}
.head1{
  font-size: 30rpx;
  color: #999;
  margin: 20rpx 30rpx;
}
.head2{
  text-align: center;
  color: #1296db;
}
.head2 text:nth-child(1){
  font-size: 70rpx;
  font-weight: bold;
}
.head2 text:nth-child(2){
  font-size: 30rpx;
}
.head3{
  margin-top: 70rpx;
  padding-bottom: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.head3 view{
  box-sizing: border-box;
  width: 33.33%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.head3 view text:nth-child(1){
  flex: 1;
  font-size: 28rpx;
  color: #999;
}
.head3 view text:nth-child(2){
  font-size: 30rpx;
  color: #eda010;
}
.head4{
  margin: 20rpx 30rpx 0;
  padding-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
}
.head4 view:nth-child(1){
  border-right: 1px solid #d9d9d9;
  flex: 1;
  font-size: 50rpx;
  color: #eda010;
}
.head4 view:nth-child(2){
  text-align: center;
  width: 150rpx;
  font-size: 30rpx;
  color: #1296db;
}
