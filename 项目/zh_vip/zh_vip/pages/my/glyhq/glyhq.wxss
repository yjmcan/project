.touch-item {
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  /* border-bottom:1px solid #ccc; */
  width: 100%;
  overflow: hidden;
}

.content {
  width: 100%;
  padding: 10px;
  line-height: 22px;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
}

.del {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #f44444;
  width: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .yhq1, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
