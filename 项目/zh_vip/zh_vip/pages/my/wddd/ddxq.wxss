@import "../../../style/ccsc.wxss";
body{ overflow-x: hidden; }
.status-bar { box-sizing: border-box; padding: 0 88rpx; color: #fff; font-size: 13pt; height: 120rpx; line-height: 120rpx; position: relative;text-align: center; }
.status-bar wx-image{ position: absolute; left: 0; right: 0; width: 100%; height: 100%; z-index: -1; }
