/* zh_hyk/pages/my/myinfo.wxss */
.head{
  position: relative;
  width: 100%;
  height: 280rpx;
}
.hydj{
  position: absolute;
  top: 30rpx;
  left: 5%;
  border-radius: 30rpx;
  display: flex;
  justify-content: space-around;
  width: 180rpx;
  color: #fff;
  padding: 0 20rpx;
  /* border: 2rpx solid #ed5424; */
}
.hydj text{
  font-size: 26rpx;
  margin-left: 10rpx;
}
.hydjimg{
  background: #fff;
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  display: flex;
  align-items: flex-start;
  justify-content: center;
}
.hydj image{
  width: 30rpx;
  height: 38rpx;
}
.hname{
  width: 100%;
  text-align: center;
  color: #fff;
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translate(-50%,0)
}
.bgimg{
  position: absolute;
  width: 100%;
  height: 280rpx;
  opacity: 0.8;
}
.tximg{
  position: absolute;
  width: 130rpx;
  height: 130rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  border-radius: 50%;
}
.hd{
  margin-top: 50rpx;
}
.weui-cell{
  font-size: 30rpx;
  padding:  20rpx 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.weui-cell__hd{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.weui-cell__hd image{
  width: 45rpx;
  height: 45rpx;
  margin-right: 40rpx;
}
.weui-cell__ft image{
  width: 28rpx;
  height: 40rpx;
  vertical-align: middle;
}
.weui-label {
  width: 120rpx;
}
.weui-cell_input{
  padding: 12rpx 30rpx;
}
.weui-cell:before{
  border-top: none;
}
.bc{
  width: 40%;
  background: #FE7D55;
  color: #fff;
  border-radius: 60rpx;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
  font-size: 32rpx;
}
button:active {
color: rgba(255, 255, 255, 0.6);
opacity: 0.6;
}