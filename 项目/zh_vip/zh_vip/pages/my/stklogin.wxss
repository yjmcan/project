page{
  background: #fff;
  font-family: '微软雅黑', Helvetica, sans-serif;
}
.kkfy{
  padding: 20rpx 40rpx;
  color: #FE7D55;
  font-size: 28rpx;
}
.headhd{
  margin: 0rpx 30rpx 140rpx;
  padding-top: 70rpx;
  position: relative;
  box-sizing: border-box;
  height: 270rpx;
}
.bgimg{
  position: absolute;
  width: 100%;
  height: 270rpx;
  /* opacity: 0.8; */
  border-radius: 20rpx;
}
.number{
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 30rpx;
  color: #fff;
}
.head{
  width: 100%;
  position: absolute;
  /* background: -webkit-linear-gradient( left top,#ffbc81,#ff714c);
  background: linear-gradient(left top,#ffbc81,#ff714c); */
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  /* opacity: 0.8; */
  height: 270rpx;
  z-index: 1;
}
.himg1{
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.himg1 image{
  width: 70rpx;
  height: 28rpx;
}
.hbd{
  padding: 20rpx 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.hbd__bd{
  flex: 1;
  margin-left: 40rpx;
  font-size: 35rpx;
  color: #fff;
}
.hbd__hd image{
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
}
