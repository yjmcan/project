.weui-cells{
  padding: 0 40rpx;
  font-size: 30rpx;
}
.weui-label {
  width: 150rpx;
}
.weui-cell{
  border-bottom: 1rpx solid #e5e5e5;
}
.weui-cell_input{
  padding: 12rpx 0rpx 12rpx 30rpx;
}
.weui-cell__hd{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.weui-cell__hd image{
  width: 45rpx;
  height: 45rpx;
  margin-right: 30rpx;
}
.weui-cell:before{
  border-top: none;
}
.weui-cell__ft image{
  width: 28rpx;
  height: 40rpx;
  vertical-align: middle;
}
