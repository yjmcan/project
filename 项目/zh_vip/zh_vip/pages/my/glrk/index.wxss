/* zh_vip/pages/vipseller/vipseller.wxss */
.vip{
  width: 100%;
  overflow-x: hidden;
  font-size: 28rpx;
}
.vheader{
  height: 360rpx;
  background-color: #ff7f46; 
  position: relative;
  display: flex;
  color: white;
  font-size: 26rpx;
}
.vhimg{
  width: 100%;
  height: 360rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: 2;
}
.vhbox{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: 3;
  width: 100%;
}
.tcdl{
  padding: 5rpx 10rpx;
  background: #fff;
  color: #ff7f46;
  border-radius: 10rpx;
}
.vhtop{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx 60rpx;
  align-items: center;
}
.vhtopimg{
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}
.vhbottom{
  width: 100%;
  padding: 50rpx 0rpx;
  display: flex;
  justify-content: space-around;
}
.vhblist{
  width: 33.3%;
  border-right: 3rpx solid rgba(255, 255, 255, 0.3);
}
.vhbfont1{
  font-size: 42rpx;
  margin: 5rpx 0rpx;
}

/*—————————————主题内容部分———————————*/
.vbanner{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.vbanner>.vblist:nth-child(1){margin-right: 3rpx;margin-left: 3rpx;}
.vbanner>.vblist:nth-child(2){margin-right: 3rpx;}
.vbanner>.vblist:nth-child(4){margin-right: 3rpx;margin-left: 3rpx;}
.vbanner>.vblist:nth-child(5){margin-right: 3rpx;}
.vbanner>.vblist:nth-child(7){margin-right: 3rpx;margin-left: 3rpx;}
.vbanner>.vblist:nth-child(8){margin-right: 3rpx;}
.vblist{
  width: 33%;
  background-color: white;
  height: 250rpx;
  margin-bottom: 5rpx;
}
.vblistimg{
  width: 64rpx;
  height: 57rpx;
  margin-bottom: 15rpx;
}
.vblistimg2{
  width: 53rpx;
  height: 61rpx;
  margin-bottom: 15rpx;
}
.vblistimg3{
  width: 47rpx;
  height: 60rpx;
  margin-bottom: 15rpx;
}

/*————————————————底部固定部分————————————————*/
.vfoot{
  position: fixed;
  z-index: 100;
  bottom: 0rpx;
  left: 0rpx;
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 110rpx;
  background-color: white;
  color: #666;
  font-size: 26rpx;
}
.vflist{
  height: 110rpx;
}
.vfimg{
  width: 45rpx;
  height: 45rpx;
  margin-bottom: 6rpx;
  margin-top: 5rpx;
}
.vffont{
  color: #ff7f46;
}