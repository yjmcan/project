/* zh_dianc/pages/seller/login.wxss */

.main {
  width: 100%;
  height: 100vh;
  position: relative;
}

.bgimg {
  width: 100%;
  height: 100%;
  display: block;
}

.headwz {
  position: absolute;
  top: 4%;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
  font-size: 35rpx;
  color: #fff;
}
.login{
  position: absolute;
  width: 86%;
  top: 30%;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
}
.weui-cells{
  padding: 100rpx 50rpx;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
}
.weui-cells:before{
  border-top: none;
}
.weui-cells:after{
  border-bottom: none;
}
.weui-cell:before{
  left: 0px;
}
.weui-cell{
  font-size: 30rpx;
  padding: 20rpx 0 0;
}
.weui-cell_input{
  padding-top: 20rpx;
}
.weui-label{
  width:100rpx; 
  height:2.58823529em;
  display: flex;
  align-items: center;
}
.weui-label image{
  width:55rpx;
  height: 50rpx; 
}
.weui-btn {
  margin-top: 0;
  font-size: 35rpx;
}
button{
  line-height: 2.8;
  border-radius: 0;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}
button::after{
  border: none;
}
.hdimg{
  z-index: 999;
  width: 30vw;
  height: 30vw;
  border-radius: 50%;
  position: absolute;
  top:16%;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
  /* box-shadow: 10px 10px 5px #838B8B; */
}
.ft{
  width: 100%;
  position: absolute;
  top:80%;
  font-size: 35rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.ft image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}