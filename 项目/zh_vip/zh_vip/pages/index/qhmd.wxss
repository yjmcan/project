  bottom: 70rpx;
}
.weui-panel__hd:after{
  border-bottom: none;
}
.weui-search-bar {  
    position:relative;  
    padding:10rpx 10rpx;  
    display:-webkit-box;  
    display:-webkit-flex;  
    display:flex;  
    box-sizing:border-box;  
    background-color:#EFEFF4;  
    border-top:0 solid #D7D6DC;  
    border-bottom:0 solid #D7D6DC;  
    border-radius:60px;  
}  
.weui-search-bar__form{
    border-radius:60px;  
}   
.search-log{  
    border:1px solid #eee !important;  
    display:inline-block !important;  
    margin-left:10px !important;  
    margin-top:8px !important;  
    border-radius:5px;  
    padding-left:14px;  
    padding-right:14px;  
    box-sizing:border-box;  
    text-align:center;  
    text-decoration:none;  
    line-height:2;  
}  
  
.clear-search-log{  
    margin: 20rpx auto; 
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
}
.clear-search-log image{
  margin-left: 10rpx;
  width: 60rpx;
  height: 60rpx;
}
.weui-icon-search {
  line-height: 80rpx;
}
.weui-search-bar__input{
  height: 80rpx;
  font-size: 30rpx;
}
.weui-search-bar__label{
  line-height: 100rpx;
   border-radius:60px;  
}
.weui-search-bar__box{
  line-height: 80rpx;
}
.weui-search-bar__cancel-btn{
  margin-left: 5px;
  margin-right: 5px;
  color: #ff7f46;
  font-size: 30rpx;
  line-height: 80rpx;
}
.weui-search-bar__text{
  font-size: 30rpx;
  line-height: 80rpx;
  vertical-align: top;
}
