}
.ve_mi{
  vertical-align: middle;
}

.tabbar{
  width: 100%;
  height: 100rpx;
  padding-top: 10rpx;
  background: #fff;
  z-index: 50000000000;
  bottom: 0;
  position: fixed;
  display: flex;
}
.tabbar>view{
  flex:4;
  text-align: center;
}
.tabbar view image{
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 0 auto 0;
}
.bottom_tab{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  border-top: 2rpx solid #e5e5e5;
  background: #fff;
}
.bottom_tab image{
  width: 40rpx;
  height: 40rpx;
  margin: 15rpx auto 0;
  display: block;
}
.bottom_tab>view{
  display: inline-block;
  vertical-align: middle;
  height: 100%;
  box-sizing: border-box;
}
.bottom_tab>view:nth-child(1){
  width: 20%;
  text-align: center;
  border-right: 2rpx solid #e5e5e5;
}
.bottom_tab>view:nth-child(2){
  width: 20%;
  text-align: center;
}
.bottom_tab>view:nth-child(3){
  width: 60%;
  line-height: 100rpx;
  text-align: center;
  font-size: 40rpx;
  color: #fff;
  background: orange;
}
.mask{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
}
button{
  background: none;
  margin: 0;
  padding: 0;
}
button::after{
  border: none;
}
.none_list{
  width: 300rpx;
  display: block;
  margin: 200rpx auto 0;
}
.none_list_index{
   width: 200rpx;
  display: block;
  margin: 90rpx auto 0;
}