/* zh_wzp/pages/index/index.wxss */

.head {
  width: 100%;
  height: 300rpx;
  overflow: hidden;
  color: #fff;
}

.head>view:nth-child(1) {
  width: 100%;
  height: 100%;
}

.head>view:nth-child(2) {
  /* background: gray; */
  width: 100%;
  height: 100rpx;
  align-items: center;
  display: flex;
  padding: 0 20rpx;
}
.search_img{
  width: 50rpx;
  height: 50rpx;
   left: 10%; 
}
.Sowing {
  width: 100%;
  height: 100%;
}

.Sowing image {
  width: 100%;
  height: 100%;
}

.search>view {
  /* padding: 0 20rpx; *//* text-align: center; */
}

.search>view:nth-child(1) {
  width: 15%;
}

.search>view:nth-child(3) {
  width: 15%;
  text-align: center;
}

.search>view:nth-child(2) {
  width: 65%;
  height: 60rpx;
}

.search>view view {
  width: 100%;
  height: 100%;
}

.hunt input {
  width: 70%;
  color: #fff;
  margin-left: 21%;
  height: 100%;
}

.hunt>view:nth-child(1) {
  background: #000;
  opacity: 0.4;
  top: 0;
  border-radius: 50rpx;
}

.nav {
  width: 100%;
  height: 300rpx;
  background: #fff;
  color: #666;
  padding-top: 20rpx;
}

.nav swiper {
  width: 100%;
  height: 100%;
}

.nav_list {
  width: 25%;
  height: 150rpx;
  display: inline-block;
  vertical-align: middle;
}

.nav_list>view:nth-child(1) {
  width: 100%;
  height: 100rpx;
}

.nav_list>view image {
  width: 80rpx;
  height: 80rpx;
}

/* 广告位  */

.Advertising {
  width: 100%;
  height: auto;
  background: #fff;
  margin-top: 20rpx;
  /* padding: 0 20rpx; */
}

.Advertising>view:nth-child(1) {
  height: 200rpx;
  /* width: 95%; */
  margin: 0 auto 0;
}

.Advertising>view:nth-child(2) {
  width: 100%;
  margin: 0 auto 0;
}

.img1 {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.marketlist {
  height: 200rpx;
  width: 94%;
  padding: 20rpx;
  white-space: nowrap;
  background-color: white;
}

.marketlist_one:last-child {
  margin-right: 10rpx;
}

.marketlist_one {
  width: 500rpx;
  height: 200rpx;
  border-radius: 6rpx;
  margin-right: 30rpx;
  display: inline-block;
}

.marketlist_one>image {
  width: 100%;
  height: 100%;
}

.Relevant {
  padding: 0 20rpx;
  background: #fff;
  margin-top: 20rpx;
}

.Relevant>view:nth-child(1) {
  padding: 20rpx 0;
}

.Relevant>view:nth-child(2) {
  width: 100%;
  height: 250rpx;
}

.text_0 {
  font-size: 30rpx;
  font-weight: bold;
}

.text_1 {
  font-size: 28rpx;
  float: right;
}

.img_logo {
  width: 30rpx;
  height: 30rpx;
  background: red;
  right: 100rpx;
}

.scroll_0 {
  width: 100%;
  height: 100%;
  white-space: nowrap;
}

.scroll_list {
  display: inline-block;
  vertical-align: middle;
  width: 48%;
  height: 230rpx;
  margin-right: 4%;
}

.scroll_list>view{
  width: 100%;
  height: 100%;
  top: 0;
}

.scroll_list>view:nth-child(1) {
  z-index: 100;
  background: greenyellow;
}

.scroll_list>view:nth-child(2) {
  z-index: 200;
  padding: 20rpx;
  white-space: normal;
}
.positions>view:nth-child(1){
  font-size: 24rpx;
  height: 50rpx;
}
.positions>view:nth-child(2){
  font-size: 30rpx;
  width: 70%;
}

.positions>view:nth-child(3){
  font-size: 24rpx;
  padding-top: 10rpx;
  color: #f66925;
}
.positions text{
  font-size: 40rpx;
  color: #f66925;
}
/*招聘信息  */
.recruit{
  margin-top: 20rpx;
  padding-bottom: 120rpx;
}
.recruit_0{
  width: 100%;
  background: #fff;
  height: 80rpx;
   border-bottom: 2rpx solid #e5e5e5; 
  line-height: 80rpx;
}
.recruit_0>view{
  display: inline-block;
  vertical-align: middle;
  height: 100%;
}
.recruit_0>view:nth-child(1){
  width: 20%;
  font-size: 28rpx;
  text-align: center;
}
.recruit_0>view:nth-child(2){
  width: 80%;
}
.recruit_0>view scroll-view{
  width: 100%;
  white-space: nowrap;
  /* height: 100%; */
}
.recruit_0>view scroll-view view{
  display: inline-block;
  margin-right: 50rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  height: 77rpx;
}
