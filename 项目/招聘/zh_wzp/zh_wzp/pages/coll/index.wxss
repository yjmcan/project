.recruit_1{
  padding: 0 20rpx;
  margin-top: 10rpx;
  background: #fff;
}
.recruit_1>view{
  display: inline-block;
  vertical-align: middle;
}
.recruit_1>view:nth-child(1){
  width: 70%;
  height: 100%;
}
.recruit_1>view:nth-child(2){
  width: 30%;
  height: 100%;
}
.recruit_1 image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 15rpx;
  vertical-align: middle;
}
.recruit_right>view:nth-child(1){
  padding: 50rpx 0;
  text-align: center;
  font-size: 35rpx;
  font-weight: bold;
  color: #f66925;
}
.recruit_right>view:nth-child(2){
  color: #999;
  text-align: center;
  font-size: 24rpx;
}
.recruit_left>view:nth-child(1){
  width: 100%;
  font-size: 30rpx;
  font-weight: bold;
  padding: 30rpx 0 10rpx 0;
}
.recruit_left>view:nth-child(2){
    padding: 10rpx 0;
    color: #999;
}
.recruit_left>view:nth-child(3){
    padding: 10rpx 0;
    color: #999;
    font-size: 22rpx;
}
.recruit_left>view:nth-child(4){
    padding: 20rpx 0;
}
.welfare{
  padding: 6rpx 10rpx;
  border-radius: 5rpx;
  background: rgb(240, 246, 255);
  margin-right: 15rpx;
}
.claim>text{
  margin-right: 15rpx;
}
