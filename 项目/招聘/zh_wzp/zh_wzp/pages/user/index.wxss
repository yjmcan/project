/* zh_wzp/pages/user/index.wxss */
.list{
  padding: 20rpx;
  background: #fff;
  border-bottom: 2rpx solid #e5e5e5;
}
.list>view{
  display: inline-block;
  vertical-align: middle;
}
.list>view:nth-child(1){
  width: 30%;
}
.list>view:nth-child(2){
  width: 70%;
}
.list>view image{
  vertical-align: middle;
  float: right;
}
.list>view text{
  display: inline-block;
  vertical-align: middle;
  /* background: red; */
}
.list>view text:nth-child(1){
  margin-left: 60%;
}
.list>view text:nth-child(odd){
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
}
.list>view text:nth-child(even){
  width: 30rpx;
  height: 40rpx;
  padding: 0 20rpx;
}
.logo{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 50rpx;
}
.right{
  width: 20rpx;
  height: 30rpx;
  right: 0;
}
picker{
  margin-right: 50rpx;
}
.sele{
  color: #ccc;
}
.sele_b{
  border:4rpx solid #ccc;
}
.none_sele{
  color: blue;
}
.none_sele_b{
  border:4rpx solid blue;
}
.sele_nv{
  color: #f66925;
}
.sele_nv_b{
  border:4rpx solid #f66925;
}

button{
  color: #fff;
  height: 90rpx;
  font-size: 30rpx;
  line-height: 90rpx;
  width: 90%;
  margin: 50rpx auto 0;
}
