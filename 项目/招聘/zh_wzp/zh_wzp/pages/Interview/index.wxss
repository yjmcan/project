/* zh_wzp/pages/Interview/index.wxss */
.head{
  background: #fff;
  display: flex;
}
.head>view{
  flex: 4;
  padding: 30rpx 0;
  text-align: center;
  border-bottom:4rpx solid #fff;
}
.logo{
  width: 70rpx;
  height: 70rpx;
  vertical-align: middle;
  border-radius: 50%;
  margin-right: 20rpx;
}
.inter_list{
  background: #fff;
  padding: 20rpx;
}
.mar{
  margin-top: 20rpx;
}
.inter_list text{
  vertical-align: middle;
  margin-right: 20rpx;
}
.inter_list>view:nth-child(1){
  padding-bottom: 20rpx;
  font-weight: bold;
  font-size: 34rpx;
}
.inter_list>view:nth-child(2){
  color: #999;
  font-size: 24rpx;
}
.inter_list>view:nth-child(3){
  padding-top: 20rpx;
  font-size: 24rpx;
  width: 70%;
  display: inline-block;
  vertical-align: middle;
}
.inter_list>view:nth-child(4){
  color: #999;
  font-size: 24rpx;
  width: 30%;
  display: inline-block;
  vertical-align: middle;
  text-align: center;
}
.inter_list>view:nth-child(5){
  right: 50rpx;
  display: inline-block;
  top:20%;
  font-size: 40rpx;
  font-weight: bold;
  color: rgb(255, 86, 86)
}