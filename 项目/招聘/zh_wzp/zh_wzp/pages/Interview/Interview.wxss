/* zh_wzp/pages/Interview/Interview.wxss */
.head{
  padding: 20rpx;
  height: 150rpx;
  border-bottom: 2rpx solid #e5e5e5;
}
.head>view{
  display: inline-block;
  vertical-align: middle;
  height: 100%;
}
.head>view image{
  width: 90%;
  height: 120rpx;
  background: green;
}
.head>view:nth-child(1){
  width: 25%;
}
.head>view:nth-child(2){
  width: 55%;
}
.head>view:nth-child(3){
  width: 20%;
  line-height: 120rpx;
  text-align: center;
  font-size: 30rpx;
  color: #f66925;
}
.head>view view:nth-child(1){
  height: 70rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  font-weight: bold;
}
.head>view view:nth-child(2){
  color: #999;
}
.info{
  border-bottom: 2rpx solid #e5e5e5;
  padding: 20rpx;
}
.info>image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  background: red;
  margin-right: 15rpx;
}
.info> text{
  vertical-align: middle;
}
.accept{
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #f66925;
}
.invite{
  background: #fff;
  margin-top: 20rpx;
}