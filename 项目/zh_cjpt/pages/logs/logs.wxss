.head{
  padding: 60rpx 0 40rpx 0;
  text-align: center;
  background: #459cf9;
}
.head>image{
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
  background: #f66925;
  margin: 0 auto 0;
  display: block;
}
.head>view{
  padding: 20rpx;
  color: #fff;
  font-size: 30rpx;
}
.list{
  padding: 30rpx 20rpx;
  background: #fff;
}
.list>image{
  width: 40rpx;
  height: 40rpx;
  background: red;
  vertical-align: middle;
}
.list>text{
  vertical-align: middle;
  font-size: 28rpx;
  margin-left: 20rpx;
}