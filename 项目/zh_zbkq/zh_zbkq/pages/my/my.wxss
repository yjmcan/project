page{
  background: #efeff4;
  font-family: '微软雅黑', Helvetica, sans-serif;
}
.myhead{
  position: relative;
  height: 250rpx;
}
.weui-cell{
  padding: 25rpx 30rpx;
}
.bgimg{
  position: absolute;
  width: 100%;
  height: 250rpx;
}
.bgimg image{
  width: 100%;
  height: 100%;
}
.head{
  height: 250rpx;
  box-sizing: border-box;
  width: 100%;
  position: absolute;
  padding: 30px 30px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  /* border-bottom: 1rpx solid #d9d9d9; */
}
.vipimg{
  position:fixed;
  top: 0;
  left: 15px;
  width:120rpx;
  height: 15px;
}
.head-img{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.head-img image{
 border-radius: 50%;
 width: 120rpx;
 height: 120rpx;
}
.dqsj{
  font-size: 27rpx;
  margin-left: 15px;
  color: #fff;
  margin-top: 20rpx;
}
.head-name{
  display: flex;
  flex-direction: row;
  /* justify-content: center; */
  align-items: center;
  font-size: 30rpx;
  margin-left: 15px;
  color: #fff;
}
.head-name image{
  margin-left: 10rpx;
  width: 40rpx;
  height: 40rpx
}
.head-vip{
  font-size: 30rpx;
   color: #f4ea2a;
   display: flex;
   flex-direction: row;
   justify-content: center;
   align-items: center;
} 
.head-vip image{
  margin-left: 15px;
  width: 30rpx;
  height: 30rpx;
}
/*bd*/
.bd{
  background: #fff;
  padding: 10px 0px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 30rpx;
}
.bd-view{
  box-sizing: border-box;
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.bd-view image{
  width: 55rpx;
  height: 55rpx;
}
.bd-view text{
  margin-top: 10rpx;
  font-size: 30rpx;
}
.weui-cells::after{
  border-bottom: none;
} 
.weui-cells::before{
  border-top: none;
} 
.weui-cell__bd{
  font-size: 30rpx;
}
