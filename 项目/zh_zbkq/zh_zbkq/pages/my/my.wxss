/*mask*/ 
.drawer_screen { 
 width: 100%; 
 height: 100%; 
 position: fixed; 
 top: 0; 
 left: 0; 
 z-index: 1000; 
 background: #000; 
 opacity: 0.5; 
 overflow: hidden; 
} 
 
/*content*/ 
.drawer_box { 
 width: 70vw; 
 overflow: hidden; 
 position: fixed; 
 top: 20%; 
 left: 0; 
 z-index: 1001; 
 background: #FAFAFA; 
 margin: 0 15vw 0 15vw; 
 border-radius: 5px; 
} 
.drawer_box image{
  margin: 2vw 10vw 0;
  width: 50vw;
  height: 50vw;
}
.drawer_title{ 
 padding:30rpx; 
 font: 30rpx "microsoft yahei"; 
 text-align: center; 
 color: #333; 
} 
.drawer_title1{ 
 padding: 20rpx; 
 font: 27rpx "microsoft yahei"; 
 text-align: center; 
 color: #999; 
}
.drawer_content { 
 height: 210px; 
 overflow-y: scroll; /*超出父盒子高度可滚动*/ 
} 
 
.btn_ok{ 
 padding: 25rpx; 
 font: 30rpx "microsoft yahei"; 
 text-align: center; 
 border-top: 1rpx solid #E8E8EA; 
 color: #333; 
} 
