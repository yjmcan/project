/* pages/index/info.wxss */

.head {
  height: 400rpx;
}
.head>view:nth-child(1){
  width: 100%;
  height: 100%;
}
.sign_up {
  width: 300rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 70rpx;
}

.sign_up image {
  width: 80rpx;
  height: 80rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background: red;
  border-radius: 50%;
}

.sign_up_0 {
  width: 300rpx;
  height: 100rpx;
  border-radius: 70rpx;
  background: #000;
  opacity: .5;
}
.detail{
  min-height: 300rpx;
  border-top: 2rpx solid #e5e5e5;
  border-bottom: 2rpx solid #e5e5e5;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.follow image{
  width: 100rpx;
  height: 100rpx;
  background: orange;
  border-radius: 50%;
}
.follow>view:nth-child(1){
  width: 20%;
}
.follow>view:nth-child(2){
  width: 40%;
}
.follow>view:nth-child(3){ 
  width: 40%;
}
.logo{
  width: 100%;
  height: 100%;
}
.text1{
  border: 2rpx solid orange;
  border-radius: 50rpx;
  padding: 10rpx 20rpx;
}
.list>text:nth-child(1){
  width: 10rpx;
  height: 35rpx;
  background: orange;
}
.list>text:nth-child(2){
 margin-left: 20rpx;
}
button{
  border-radius: 0;
  background: #f66925;
  color: #fff;
}
.switch{
  height: 80rpx;
  width: 100%;
}
.switch>view{
  width: 50%;
  height: 100%;
  display: inline-block;
  box-sizing: border-box;
  line-height: 80rpx;
}
.sele{
  border-bottom: 4rpx solid #f66925;
  color: #f66925;
}