<view class='main'>
  <image class='bgimg' src='../../../img/bj1@2x.png'></image>
  <view class='headwz' style='color:{{color}}'>{{xtxx.url_name}}</view>
  <image class='hdimg ab' src='{{xtxx.link_logo}}'></image>
  <view class='resite border1'>
    <view>帐号密码登录</view>
    <view class='ab udlr'>
      <view class='resite_one'>
        <view class='text'>
          <view class='rel'>
            <image class='ab udlr' src='../../img/icon/account.png'></image>
          </view>
          <view>
            <input bindblur='name' placeholder='请输入账号' placeholder-style='font-size:30rpx;'></input>
          </view>
        </view>
      </view>
      <view class='resite_one'>
        <view class='text'>
          <view class='rel'>
            <image class='ab udlr' src='../../img/icon/password.png'></image>
          </view>
          <view>
            <input bindblur='password' placeholder='请输入密码'></input>
          </view>
        </view>
      </view>
    </view>
    <button bindtap='sign' style='background:{{color}}'>登录</button>
    <!-- <view class='weixin border2' bindtap='weixin'>微信登陆</view> -->
  </view>
  <button class="weui-btn" bindtap='weixin'>
    <image src='../../img/icon/wxdl.png'></image> 微信登录</button>
  <!-- <view class='weixin' bindtap='weixin'>
      <text>微信登陆</text>
  </view> -->
  <view class='ft' bindtap='tel'>
    <!-- <image src='../image/kefu@3x.png'></image> -->
    <view>客服电话：{{xtxx.tel}}</view>
  </view>
</view>
