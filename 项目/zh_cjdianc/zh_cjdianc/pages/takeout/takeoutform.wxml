<view class="share-modal {{sjshare_modal_active?'active':''}}">
  <view class="share-modal-body" style='background:F2F2F2'>
    <view class='yhqhead' style='background:#EEEEEE'>选择送达时间</view>
    <view class="flex-row">
      <view class="flex-grow-0">
        <scroll-view scroll-y="true" style="height:500rpx;" scroll-into-view="{{toType}}">
          <view id="a{{index}}" wx:for="{{timearr}}" bindtap='selectedime' data-index='{{index}}' class="xztime flex-x-center flex-y-center {{sjindex==index?'timeselsect':''}}">{{item.time}}</view>
        </scroll-view>
      </view>
