  <view class="share-modal-body">
    <view class='yhqhead'>选择红包</view>
    <radio-group class="radio-group" name="hbradiogroup" bindchange="hbradioChange">
      <scroll-view scroll-y style="height: 400rpx;">
        <!-- 代金券 -->
        <!-- <view hidden="{{activeIndex != 0}}"> -->
