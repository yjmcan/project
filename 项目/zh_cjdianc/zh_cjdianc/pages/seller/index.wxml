    <image mode='widthFix' class='tjhbbdimg' src='../../img/hbhead.png'></image>
    <view class='hbtitle1'>送你 {{wlqyhq.length}} 个红包</view>
    <view class='hbtitle2'>赶快下单使用吧 !</view>
    <view class='tjhbbdcv'>
