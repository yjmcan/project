/* pages/bangdan/bangdan.wxss */
page{
  background-color: #fff;
}
.tab{
  background: #ED414A;
  display: flex;
  flex-direction: row
}
.tab view{
  width: 50%;
  height: 85rpx;
  text-align: center;
  color: #fff;
  line-height: 86rpx;
  font-size: 26rpx;
}
.tab view.weuibaron{
  border-bottom: 2rpx solid #ff9aff;
  font-weight: bold;
  box-sizing: content-box
}
.top{
  position: relative;
  height: 420rpx;
}
.bg{
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 400rpx;
  display: block
}
.left{
  position: absolute;
  left:60rpx;
}
.min{
  position: absolute;
  left:50%;
   transform: translate(-50%,0);
  z-index: 10
}
.right{
  position: absolute;
  right:60rpx;
}
.left,
.min,
.right{
  width: 180rpx;
  background: #fff;
  border-radius: 30rpx;
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  top:30rpx;
  box-shadow: 2rpx 2rpx 25rpx pink;
  height: 300rpx;
}
.lt{
  width: 100rpx;
  height: 135rpx;
  position: relative;
  margin:30rpx auto 0;
}
.speciel{
   margin:35rpx auto 0;
}
.gold{
  position: absolute;
  top:0;
  left: 0;
  width: 81rpx;
  height: 51rpx;
  z-index: 10;
  margin-left:8rpx;

}
.headimg{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100rpx;
  height: 100rpx;
  background: pink;
  border-radius: 100%;
}
.name{
  text-align: center;
  margin:22rpx 0 15rpx 0;
  font-size: 26rpx;
}
.num{
  font-size: 34rpx;
  text-align: center;
  margin-bottom: 15rpx;
}

.list{
  border-top: 1rpx solid #f2f2f2;
  padding: 0 30rpx;
  height: 140rpx;
}
.img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  background: pink;
  margin:0 30rpx 0 0;
}
.num1{
   position: absolute;
   right: 30rpx;
}

/*——————————底部固定导航部分——————————  */
