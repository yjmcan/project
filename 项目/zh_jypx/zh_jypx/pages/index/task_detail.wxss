/* pages/index/task_detail.wxss */
.classes{
  font-size: 38rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
}
.title{
  text-align: center;
  font-size: 33rpx;
}
.anser_con{
  width: 80%;
  margin: 60rpx auto;
}
.head{
  font-size: 30rpx;
  margin-bottom: 30rpx;
}
.next,.answer{
  border:1rpx solid #ccc;
  display: inline-block;
  border-radius: 10rpx;
  font-size: 33rpx;
}
.answer{
  margin-top: 30rpx;
  padding: 20rpx 30rpx;
  letter-spacing: 5rpx;
  margin-right: 20rpx
}
.next{
  margin: 20rpx;
  padding: 20rpx 50rpx;
}
.video video{
  width: 100%;
  height: 325rpx;
  z-index: 10;
}
.answer_box{
  margin-top: 20rpx;
  font-size: 30rpx;
}
.answer_time{
  padding:15rpx 10rpx 15rpx 200rpx;
  border:1rpx solid #ccc;
  border-radius:10rpx;
  margin-left:20rpx;
  color: #fff;
  background: #93d944;

}
.megaphone{
  position: fixed;
  top:50rpx;
  margin-left: 300rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(0,0,0,0.8);
  z-index:10000
}
.megaphone image{
  width: 200rpx;
  height: 200rpx;
}
.submit{
  margin-bottom: 20rpx;
  font-size: 33rpx;
  color: #fff;
  background: #08a3ff;
  margin-top:20rpx
}

.check_true image,
.check_erro image{
  width: 100rpx;
  height: 100rpx;
  background: #ccc;
  border-radius: 100%;
  margin-right: 20rpx;
}
.check_true view,
.check_erro view{
  padding: 15rpx 30rpx;
  border:1rpx solid #ccc;
  border-radius: 10rpx;
  font-size: 30rpx;
}