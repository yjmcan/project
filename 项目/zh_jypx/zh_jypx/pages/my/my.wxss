/* pages/my/my.wxss */
page{
  background: #fff;
}
/*个人消息*/
.msg{
  padding: 40rpx 0 40rpx 60rpx;
  border-bottom:1rpx solid #ccc;
  color: #666;
}
.head{
  display: inline-block;
  width:120rpx;
  height: 120rpx;
  background: #ccc; 
  margin-right: 30rpx;
  border-radius: 100%;
}

/*积分*/
.rank{
  padding: 40rpx 0;
}
.rank view{
  border:1rpx solid #ccc;
  padding: 10rpx 15rpx;
  border-radius: 10rpx;
  box-shadow: 2rpx 2rpx 2rpx #ccc;
}
.my{
  margin:10rpx 30rpx;
}
.row{
  height: 90rpx;
  border-bottom: 1rpx solid #ccc;
  padding-left: 30rpx;
  color: #888;
}
.my image{
  width: 64rpx;
  height: 64rpx;
  margin-right: 15rpx;
}
.row::after{
  content: "";
  position: absolute;
  right: 60rpx;
  display: inline-block;  
  border-right: 1px solid #ccc; 
  border-bottom: 1px solid #ccc;  
  width: 10px;
  height: 10px;  
  transform: rotate(-45deg); 
}
.service{
  width: 100%;
  background: none;
  padding-left: 0;
  font-size: 28rpx;
  color: #888
}
.service::after{
  border:0;
}