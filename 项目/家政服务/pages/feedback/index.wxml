<form bindsubmit="formSubmit" bindreset="formReset">
  <view class='submit'>
      <textarea name="text" placeholder='感谢您提出的建议'></textarea>
  </view>
  <view class='submit'>
      <view>姓名</view>
      <view class='rel'>
          <input name="name" class='ab udlr' placeholder='请输入您的姓名'></input>
      </view>
  </view>
   <view class='submit'>
      <view>手机号</view>
      <view class='rel'>
          <input name="tel" class='ab udlr' placeholder='请输入您的手机号'></input>
      </view>
  </view>
  <button form-type='submit'>提交</button>
</form>