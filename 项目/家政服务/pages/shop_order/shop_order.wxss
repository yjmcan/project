/* pages/order/order.wxss */
.nav{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  display: flex;
  font-size: 30rpx;
  text-align: center;
  box-sizing: border-box;
}
.nav>view{
  flex: 4;
}
.select{
  display: inline-block;
  height: 100%;
  color: #ec8a0d;
  font-weight: 600;
  border-bottom: 2rpx solid #ec8a0d;
}
.order{
  margin-top: 20rpx;
  background: #fff;
  width: 100%;
  height: 250rpx;
  border:2rpx solid #e5e5e5;
}
.order:last-child{
  border: none;
}
.order>view{
  display: inline-block;
  vertical-align: middle;
}
.order>view:nth-child(2){
  width: 23%;
  height: 100%;
}
.img image{
  width: 150rpx;
  height: 150rpx;
  top: 20rpx;
  right: 0;
}
.info{
  width: 70%;
  height: 100%;
  margin-left: 3%;
}
.order_name{
  font-size: 28rpx;
  color: #999;
  width: 80%;
  height: auto;
  padding-top: 20rpx;
  line-height: 30rpx;
}
.remarks{
  width: 100%;
  height: 50rpx;
  vertical-align: middle;
}
.remarks image{
  width: 30rpx;
  height: 30rpx;
}
.remarks>view{
  display: inline-block;
  width: 90%;
  height: 100%;
  margin-left: 40rpx;
  font-size: 24rpx;
  line-height: 50rpx;
}
.remarks>view text:nth-child(1){
  float: left;
  color: #999;
}
.remarks>view text:nth-child(2){
  float: right;
}
.shop_num{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  color: #999;
  font-size: 24rpx;
}
.order_states{
  width: 100%;
  height: 50rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  text-indent: 20rpx;
}
.order_states text{
  color: #f66925;
}