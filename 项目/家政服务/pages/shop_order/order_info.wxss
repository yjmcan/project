/* pages/order_info/order_info.wxss */
.order_info{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  background: #fff;
  text-indent: 20rpx;
}
.order_num{
  margin-top: 20rpx;
}
.time{
  color: #888;
}
.order_num,.time{
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx solid #f9f9f9;
  background: #fff;
  font-size: 28rpx;
  line-height: 80rpx;
  text-indent: 20rpx;
}
.shop_info{
  width: 100%;
  height: 250rpx;
  font-size: 28rpx;
  color: #888;
  background: #fff;
}
.shop_info>view{
  display: inline-block;
  vertical-align: middle;
}
.shop_info>view:nth-child(1){
  width: 30%;
  height: 100%;
}
.shop_info>view:nth-child(2){
  width: 40%;
  /* height: 100%; */
}
.shop_info>view:nth-child(3){
  width: 30%;
  height: 100%;
  line-height: 300rpx;
  font-size: 30rpx;
  text-align: center;
}
.shop_img{
  width: 150rpx;
  height: 150rpx;
}
.infos>view:nth-child(1){
  width: 100%;
  height: 60rpx;
  line-height: 30rpx;
  margin-top: 30rpx;
}
.infos>view:nth-child(2){
  width: 100%;
  height: 50rpx;
  line-height: 60rpx;
}
.infos>view:nth-child(3){
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  vertical-align: middle;
}
.infos>view image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
button{
  width: 90%;
  height: 80rpx;
  font-size: 30rpx;
  background: #f66925;
  color: #fff;
  position: fixed;
  bottom: 30rpx;
  left: 5%;
}/* pages/shop_order/order_info.wxss */