/* pages/users.wxss */
.textarea{
  width: 92%;
  height: 400rpx;
  margin: 20rpx auto 0;
  background: #fff;
  padding-top: 10rpx;
}
.textarea>view{
  width: auto;
  bottom: 5rpx;
  right: 10rpx;
  font-size: 24rpx;
  color: #999;
}
.textarea textarea{
  width: 95%;
  height: 100%;
  margin: 0 auto 0;
  font-size: 28rpx;
}
.info{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
}
.info>view{
  height: 100%;
  display: inline-block;
  vertical-align: middle;
  font-size: 28rpx;
  background: #fff;
}
.info>view:nth-child(1){
  width: 20%;
  text-align: center;
}
.info>view:nth-child(2){
  width: 80%;
}
button{
  width: 60%;
  height: 80rpx;
  background: #f66925;
  border-radius: 60rpx;
  color: #fff;
  line-height: 80rpx;
  margin-top: 80rpx;
}