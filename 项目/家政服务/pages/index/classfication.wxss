
.recommend_list{
  width: 95%;
  height: auto;
  background: #fff;
  margin: 20rpx auto 0;
}
.recommend_list>view{
  width: 100%;
}
.recommend_list>view:nth-child(1){
  height: 240rpx;
}
.recommend_list>view:nth-child(2){
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.recommend_list>view:nth-child(3){
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #999;
}
.recommend_list>view image{
  width: 100%;
  height: 100%;
}
.price{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
}
.price>text:nth-child(1){
  float: left;
  color: red;
}
.price>text:nth-child(2){
  float: right;
  color: red;
}
.price>text:nth-child(3){
  float: right;
}
