.address,.time,.info,.input{
  background: #fff;
}
.address{
  width: 100%;
  height: 200rpx;
}
.add_address{
  width: 65%;
  height: 90rpx;
  background: #ec8a0d;
  border-radius: 50rpx;
  color: #fff;
  line-height: 90rpx;
  text-align: center;
  font-size: 40rpx;
}
.time{
  width: 100%;
  height: 90rpx;
  margin-top: 20rpx;
  line-height: 90rpx;
}
.time>view{
  display: inline-block;
  vertical-align: middle;
  width: 50%;
}
.time>view view{ 
  display: inline-block;
  vertical-align: middle;
  font-size: 28rpx;
}
.time>view view:nth-child(1){
  text-indent: 20rpx;
}
.time>view view:nth-child(2){
  color: #666;
}
.info{
  margin-top: 20rpx;
  height: 140rpx;
}
.info>view{
  display: inline-block;
  vertical-align: middle;
}
.info>view image{
  width: 100rpx;
  height: 100rpx;
  background: red;
  margin-left: 20rpx;
}
.info>view:nth-child(2){
  margin-left: 20rpx;
}
.info_text>view{
  height: 70rpx;
}
.info_text>view:nth-child(1){
  line-height: 80rpx;
  font-size: 30rpx;
}
.info_text>view:nth-child(2){
  line-height: 50rpx;
  font-size: 30rpx;
}
.input{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
}
.input:nth-child(2n){
  margin-top: 20rpx;
}
.input:nth-child(even){
  border-bottom: 2rpx solid #f9f9f9;
}
.input>view{
  display: inline-block;
  vertical-align: middle;
}
.input>view:nth-child(1){
  margin-left: 20rpx;
}