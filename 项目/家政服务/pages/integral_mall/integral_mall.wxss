/* pages/integral_mall/integral_mall.wxss */
.head_img{
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}
.user_info{
  width: 100%;
  height: 160rpx;
  margin-top: 20rpx;
  background: #fff;
}
.users{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 2rpx solid #e5e5e5;
}
.users>view{
  display: inline-block;
  vertical-align: middle;
}
.users>view:nth-child(1){
  width: 13%;
  height: 100%;
}
.users>view:nth-child(2){
  width: 70%;
  height: 100%;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #666;
}
.users>view image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.integral{
  width: 100%;
  height: 80rpx;
}
.integral>view:nth-child(1){
  text-align: center;
  height: 30rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  color: #999;
  padding: 10rpx 0;
}
.integral>view image{
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}
.integral>view:nth-child(2){
  text-align: center;
  font-size: 40rpx;
  line-height: 40rpx;
  color: orange;
}
.shoping_list{
  width: 98%;
  height: auto;
  margin: 20rpx auto 0;
}
.shoping_list>view{
  width: 49%;
  height: auto;
  display: inline-block;
  background: #fff;
  margin-top: 5rpx;
  margin-bottom: 10rpx;
}
.shoping_list view:nth-child(2n){
  margin-left: 2%;
}
.list_info image{
  width: 100%;
  height: 300rpx;
  display: block;
}
.list_info>view:nth-child(2){
  width: 100%;
  height: 60rpx;
  line-height: 30rpx;
  font-size: 28rpx;
  color: #999;
  padding: 20rpx 0;
}
.integrals{
  width: 100%;
  height: 70rpx;
  border-top: 2rpx solid #e5e5e5;
}
.integrals>view{
  display: inline-block;
  vertical-align: middle;
}
.integrals>view:nth-child(1){
  width: 60rpx;
  height: 100%;
}
.integrals>view:nth-child(2){
  width: 150rpx;
  height: 100%;
  line-height: 70rpx;
  font-size: 28rpx;
  color: red;
}
.integrals>view image{
  width: 50rpx;
  height: 50rpx;
}
.integrals text{
  font-size: 30rpx;
  padding: 10rpx 30rpx;
  background: red;
  border-radius: 30rpx;
  right: 10rpx;
  height: 40rpx;
  color: #fff;
}