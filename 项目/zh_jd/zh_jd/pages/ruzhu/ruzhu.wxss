/* pages/ruzhu/ruzhu.wxss */
page{
  background-color: #F9F9F9;
  overflow-x: hidden;
}
.ruzhu_header{
  height: 200rpx;
  width: 100%;
  background-color: #EB5E18;
  color: white;
  padding-top: 1rpx;
  padding-bottom: 30rpx;
}
.ruzhu_header1{
  font-size: 50rpx;
  margin-top:50rpx;
  margin-left: 30rpx;
}
.ruzhu_header2{
  font-size: 30rpx;
  margin-top: 15rpx;
  margin-left: 30rpx;
}
.ruzhu_content{
  margin: 20rpx 0rpx;
  background-color: white;
}
.ruzhu_content1{
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #E0E0E0;
  border-bottom: 1rpx solid #E0E0E0;
}
.ruzhu_content2{
  font-size: 30rpx;
  color: #333;
}
.ruzhu_content3{
  font-size: 28rpx;
  color: #999;
}
.ruzhu_content4{
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
}
.ruzhu_content6{
  margin-left: 30rpx;
}
.ruzhu_content7{
  margin-top: 20rpx;
}
.ruzhu_content8{
  color: #999;
}
.ruzhu_content9{
  border-top: 1rpx solid #E0E0E0;
  border-bottom: 1rpx solid #E0E0E0;
  display: flex;
  font-size: 28rpx;
}
.ruzhu_dian{
  width: 33%;
  padding:20rpx 40rpx;
  border-left: 1rpx solid #E0E0E0;
  display: flex;
  align-items: center;
  position: relative;
}
.ruzhu_dian2{
  margin-left: 10rpx;
  margin-top: -5rpx;
}
.ruzhu_dian1 image{
  width: 27rpx;
  height: 30rpx;
}
.ruzhu_zhi{
  margin: 20rpx 0rpx;
  padding: 0rpx 35rpx;
  background-color: white;
  font-size: 26rpx;
  border-top: 1rpx solid #E0E0E0;
  border-bottom: 1rpx solid #E0E0E0;
}
.ruzhu_zhi1{
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #E0E0E0;
  align-items: center;
}
.ruzhu_zhi1_1{
  height: 95rpx;
}
.ruzhu_zhi2{
  border-bottom: 1rpx solid #E0E0E0;
  padding-bottom: 20rpx;
}
.ruzhu_zhi2_1{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.ruzhu_zhi4{color: #EB5E18;}
.shifu{
  padding: 10rpx 0rpx 20rpx;
  width: 100%;
  height: 105rpx;
}
.shifu_kuan{
  float: left;
  font-size: 26rpx;
  line-height: 60rpx;
  color: #999;
}
.shifu1{
  height: 60rpx;
}
/* .shifu2{
  text-align: left;
  font-size: 24rpx;
} */
.shifu2 text{
  display: block;
  text-align: left;
  height: 60rpx;
  line-height: 60rpx;
  /* width: 50%; */
}
.tishi{
  color: #999;
  font-size: 24rpx;
  height: 200rpx;
  padding: 0rpx 30rpx 30rpx 30rpx;
}
.queren{
  /* display: flex; */
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  height: 100rpx;
  width: 100%;
  font-size: 32rpx;
}
.queren1{
  width: 50%;
  background-color: white;
  color: black;
  height: 100rpx;
  display: inline-block;
  text-align: center;
  line-height: 100rpx;
  border-top: 1rpx solid #E0E0E0;
}
.queren2{
  width: 50%;
  background-color: #EB5E18;
  color: white;
  height: 100rpx;
  float: right;
  text-align: center;
  line-height: 100rpx;
  border-top: 1rpx solid #EB5E18;
}
.ruzhu_btn{
  position: absolute;
  left: 0rpx;
  top:0rpx;
  width:100%;
  height: 100%;
  opacity: 0;
  z-index: 99;
  border-radius: 0rpx;
}




