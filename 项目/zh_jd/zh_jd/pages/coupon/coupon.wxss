}
.son_left>view image{
  width: 100%;
  background: red;
} */
.son_right{
  height: 100%;
  width: auto;
  background: #fff;
  display: inline-block;
}
.son_right>view{
 width: 400rpx;
  line-height: 75rpx;
  color: #333;
  text-indent: 50rpx;
}
.son_right>view:nth-child(1){
  top: 0;
  font-size: 35rpx;
}
.son_right>view:nth-child(2){
  top: 50%;
  font-size: 24rpx;
}
.not_user{
  right: -50rpx;
  top:20rpx;
  color: #fff;
  background: #F9882B;
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  transform:rotate(45deg);
}

.not_user view{
  width: 100%;
  height: 100%;
}
.color{
  width: 95%;
  height: 40rpx;
  display: flex;
  margin: 20rpx auto;
}
.color>view{
  flex:5;
  text-align: center;
  position: relative;
}
.color>view view{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
}