/* zh_jd/pages/coupon/coupon.wxss */
page{
  background: #e5e5e5;
  height: 100%;
}
.users{
  width: 85%;
  height: 70rpx;
  line-height: 70rpx;
  text-indent: 50rpx;
  font-size: 30rpx;
  background: #fff;
  border-radius: 10rpx;
  margin: 30rpx auto 0;
}
.effective,already,overdue{
  color: #F9882B
}
.default{
  color: #000;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
.container{
  width: 100%;
  height: 100%;
}
.header{
  width: 100%;
  height: 100rpx;
  margin: 0 auto;
}
.background{
  width: 100%;
  height: 60%;
  top: 0;
  background: #F9882B;
  z-index: 1;
}
.option{
  width: 95%;
  height: 100%;
  background: #fff;
  border-radius: 10rpx;
  margin: 0 auto;
  z-index: 100;
}
.option_son{
  width: 100%;
  height: 30rpx;
  display: flex;
}
.option_son>view{
  flex:3;
  border-right: 1rpx solid #000;
  text-align: center;
  line-height: 30rpx;
  font-size: 28rpx;
}
.option_son>view:nth-child(3){
  border: none;
}
.body{
  width: 95%;
  height: auto;
  /* background: #fff; */
  margin: 20rpx auto;
  padding-top:20rpx;
  padding-bottom: 20rpx;
}
.coupons{
  width: 90%;
  height: auto;
  margin: 0 auto;
}
.coupons_son{
  width: 100%;
  height: 150rpx;
  border-radius: 8rpx; 
  margin-bottom: 10rpx;
  color: #333;
  background: #fff;
  /* background: linear-gradient(to right, #F9882B , #5C38F7); */
  overflow: hidden;
}
.butt{
  width: 150rpx;
  height: 60rpx;
  background: orange;
  right: -50rpx;
  top: 80rpx;
}
 .son_right button{
   width: 160rpx; 
   height: 50rpx; 
  right: -400rpx;
  top: 50rpx;
  position: absolute;
  background: red;
} 
.none_coupon{
  width: 100%;
  height: 350rpx;
  border-radius: 8rpx; 
}
.none_coupon>view{
  width: 400rpx;
  height: 250rpx;
}
.none_coupon>view view{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  bottom: 0;
}
.none_coupon image{
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}
.son_left{
  width: 150rpx;
  height: 150rpx;
  box-sizing: border-box;
  display: inline-block;
  background: #F9882B;
   border-right: 2rpx dotted #fff; 
}
.son_left>view:nth-child(1){
  width: 36rpx;
  height: 18rpx;
   background: #fff; 
  top: 0;
  border-radius: 0 0 18rpx 18rpx;
  right: -18rpx;
}
.son_left>view:nth-child(2){
  width: 36rpx;
  height: 18rpx;
   background: #fff; 
  bottom: 0;
  border-radius: 18rpx 18rpx 0 0;
  right: -18rpx;
}
.son_left>view:nth-child(3){
  width: 100%;
  height: 100%;
  top: 0;
  text-align: center;
  line-height: 150rpx;
  font-size: 60rpx;
  font-weight: bold;
  color: #fff;
}
