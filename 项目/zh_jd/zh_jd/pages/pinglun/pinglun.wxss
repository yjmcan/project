/* pinglun.wxss */
.pinglun_ban1{
  padding: 10rpx 30rpx;
}
.pinglun_banner{
  border-bottom: 1rpx solid #E5E5E5;
  padding:20rpx 0rpx;
  display: flex;
}
.pinglun_name{
  width: 150rpx;
  height: 40rpx;
  font-size: 32rpx;
  color: #333;
  overflow: hidden;
}
.pinglun_score{
  color: #FF7674;
  font-size: 30rpx;
}
.pinglun_time1{
  display: flex;
}
.pinglun_con{
  margin: 20rpx 0rpx;
  color: #747474;
  font-size: 28rpx;
}
.pinglun_img2{
  margin: 0rpx 20rpx;
}
.pinglun_flex{
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.pinglun_yan{
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-left: 20rpx;
}
.pinglun_time{
  float: right;
  color: #CCCCCC;
  font-size: 26rpx;
}
.pinglun_img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  flex-wrap: wrap;
}
.pinglun_img{
  width: 100rpx;
  height: 100rpx;
}
.pinglun_seller{
  font-size: 26rpx;
  color: #747474;
  background: #eaeaea;
}

