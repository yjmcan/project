.container{
  width:100%;
  height: 100%; 
}
.body{
  width: 100%;
  height: auto;
  background: #fff;
}
.intergral{
  width: 90%;
  height: 150rpx;
  border-bottom: 1rpx solid #ccc;
  margin: 0 auto;
}
.intergral:last-child{
  border: none;
}
.mine_intergal{
  width: 100%;
  height: 120rpx;
  border-bottom: 1rpx solid #ccc;
}
.mine_intergal>view{
  height: 50%;
  text-indent: 5%;
}
.mine_intergal>view text:nth-child(2){
  color: #888;
  font-size: 24rpx;
}
.mine_intergal>view:nth-child(1){
  font-size: 30rpx;
  line-height: 60rpx;
  width: 95%;
  color: #333;
}
.mine_intergal>view:nth-child(2){
  font-size: 50rpx;
  line-height: 40rpx;
  width: 60%;
  color: #F9882B;
  /* font-weight: bold; */
}
.intergral_img{
  width: 20%;
  height: 100%;
  float: left;
}
.intergral_img view{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  left: 0;
  /* background: red; */
}
.intergral_one{
  width: 80%;
  height: 50%;
  line-height: 90rpx;
}
.intergral_two{
  width: 80%;
  height: 50%;
  line-height: 50rpx;
}
.intergral_one text:nth-child(1){
  float: left;
  font-size: 30rpx;
}
.intergral_one text:nth-child(2){
  float: right;
  font-size: 35rpx;
  font-weight: bold;
  color: #000;  
}
.intergral_two text:nth-child(1){
  float: left;
  font-size: 26rpx;
  color: #777;
}
.intergral_two text:nth-child(2){
  float: right;
  font-size: 26rpx;
  color: #777;
}