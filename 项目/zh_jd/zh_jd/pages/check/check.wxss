/* zh_jd/pages/check/check.wxss */

.prompt {
  color: #777;
}

page {
  height: 100%;
  background: #efeff4;
}

.container {
  width: 100%;
  height: 100%;
}

.header {
  width: 100%;
}

.apply {
  width: 100%;
  height: auto;
  min-height: 80rpx;
  background: #fff;
}

.apply view {
  width: 95%;
  height: 30rpx;
  color: #333;
}

.apply view text:nth-child(1) {
  width: 9rpx;
  height: 100%;
  float: left;
  background: red;
  margin-right: 10rpx;
}

.apply view text:nth-child(2) {
  height: 100%;
  font-size: 28rpx;
  float: left;
  line-height: 30rpx;
}

.detailed {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
}

.detailed>view {
  width: 100%;
  height: 100%;
  margin: 0 auto;
}

.hotel_name {
  width: 95%;
  height: 80rpx;
  margin: 0 auto;
  background: #fff;
  padding-bottom: 30rpx;
}

.hotel_name:last-child {
  border: none;
}

.hotel_name .total {
  width: 160rpx;
  height: 100%;
  line-height: 80rpx;
  font-size: 26rpx;
  margin-left: 30rpx;
  color: #333;
}

.hotel_name .input {
  width: auto;
  height: 80rpx;
  max-width: 300rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.hotel_name .input input {
  width: 100%;
  height: 100%;
}

.hotel_name .input text {
  color: #777;
  margin-right: 10rpx;
}

.code {
  padding: 10rpx 23rpx;
  bottom: 12rpx;
  right: 10rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #fff;
  background: #f9882b;
}

.code view {
  background: none;
  font-size: 26rpx;
  line-height: 64rpx;
  color: #fff;
  padding: 19rpx 15rpx;
  background: #f9882b;
}

.upload {
  width: 95%;
  line-height: 80rpx;
  height: auto;
  /* margin-top: 30rpx; */
  background: #fff;
  border-radius: 20rpx;
  margin: 30rpx auto;
  font-size: 26rpx;
  color: #333;
}

.upload_img {
  width: 95%;
  height: 170rpx;
  margin: 0 auto;
  min-height: 200rpx;
  display: flex;
}

.upload_head {
  font-size: 26rpx;
  text-indent: 30rpx;
}

.upload_img>view {
  flex: 3;
  height: 170rpx;
}

.upload_img>view view {
  width: 170rpx;
  height: 170rpx;
  display: inline-block;
  border: 1rpx solid #ccc;
  overflow: hidden;
  border-radius: 20rpx;
}

.verification {
  width: 95%;
  margin: 30rpx auto 0rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  text-indent: 30rpx;
  color: #777;
  background: #fff;
}

.supplement {
  width: 95%;
  margin: -5rpx auto;
  height: 200rpx;
  font-size: 28rpx;
  background: #fff;
}

.supplement textarea {
  width: 92%;
  height: 180rpx;
  margin:  0 auto;
}

.footer {
  width: 100%;
  height: 200rpx;
}

.footer {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

.footer button:nth-child(1) {
  margin-top: 60rpx;
  margin-bottom: 30rpx;
  background: #f9882b;
  color: #fff;
  width: 90%;
}

.footer button:nth-child(2) {
  margin-bottom: 30rpx;
  border: 1rpx solid #333;
}

button::after {
  border: none;
}

.checkbox {
  width: auto;
  height: auto;
  margin-left: 30rpx;
}

.checkboxs {
  width: auto;
  height: 40rpx;
  display: inline-block;
  /* line-height: 40rpx; */
  font-size: 26rpx;
  margin-right: 30rpx;
  margin-bottom: 10rpx;
}
