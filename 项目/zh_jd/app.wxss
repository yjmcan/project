/**app.wxss**/
@import "style/weui.wxss";

page {
  height: 100%;
  width: 100%;
  overflow-x: hidden;
}

.font {
  font-family: '微软雅黑';
}

.container {
  height: 100%;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
}

/**app.wxss**/

.rel {
  position: relative;
}

.ab {
  position: absolute;
}

.ud {
  top: 0;
  bottom: 0;
  margin: auto;
}

.lr {
  left: 0;
  right: 0;
  margin: auto;
}

.udlr {
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}

.fon {
  font-family: 微软雅黑;
}

.center {
  text-align: center;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.margin_auto {
  margin: 0 auto;
}

.img {
  width: 100%;
  height: 100%;
}

.gobyndmulit {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/*单行文本超出隐藏*/

.gobyndsingle {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.zi {
  z-index: 99;
}

.iinlin_block {
  display: inline-block;
}

.border1 {
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.border2 {
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.im{
  width: 60%;
  height: 60%;
}
.op{
  opacity: .3;
}