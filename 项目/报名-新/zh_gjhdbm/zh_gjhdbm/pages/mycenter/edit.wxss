/* pages/mycenter/edit.wxss */
.index{
  width: 100%;
  overflow-x: hidden;
}
.ebanner{
  background-color: white;
  margin-top: 15rpx;
}
.cenbutton{
  background-color: #F66926;
  color: white;
  font-weight: bold;
  width: 90%;
  position: absolute;
  bottom: 40rpx;
  left: 5%;
  font-size: 34rpx;
}
.editbox{
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}
.flex_center input{
  margin-left: 20rpx;
  width: 270rpx;
}
.edituserimg{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.editright{
  width: 20rpx;
  height: 30rpx;
  margin-left: 20rpx;
}
.jianjie{
  padding: 30rpx;
  width: 92%;
  height: 200rpx;
}

.editcode{
  background-color: red;
  color: white;
  padding: 10rpx 15rpx;
  font-size: 22rpx;
  background: #F66926;
  border-radius: 8rpx;
}
.editcode button{
  margin: 0;
  background: none;
  padding: 0;
  font-size: 22rpx;
  border-radius: 0;
  line-height: 1.5;
  color: #fff;
}
.editcode button::after{
  border: none;
}
