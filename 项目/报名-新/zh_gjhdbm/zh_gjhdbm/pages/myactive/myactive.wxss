/* pages/myactive/myactive.wxss */
.index{
  width: 100%;
  overflow-x: hidden;
}
/* —————————————热门模块开始————————————— */
.marry {
  background-color: white;
  font-size: 31rpx;
  padding: 0rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.proitem {
  padding: 15rpx 0rpx;
  position: relative;
  text-align: center;
}
.proitem.weuibaron {
  color: #F66926;
  position: relative;
  font-weight: bold;
  border-bottom: 6rpx solid #F66926;
}

/* —————————————活动内容部分——————————— */
.mybanner{
  background-color: white;
  margin-top: 20rpx;
}
.mybtop{
  padding: 20rpx;
  display: flex;
}
.mybimg{
  width: 35%;
  height: 160rpx;
  border-radius: 6rpx;
}
.mybtopinfo{
  width: 63%;
  padding-left: 2%;
}
.mybtitle{
  font-weight: bold;
  font-size: 26rpx;
  width: 420rpx;
  display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
}
.mybicon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.mybfont1{
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}
.myjinxing{
  font-size: 18rpx;
  font-weight: bold;
  line-height: 30rpx;  
  padding: 5rpx 10rpx;
}
.sign_up{
  border: 3rpx solid #F66926;
  color: #F66926;
}
.sign_over{
  border: 3rpx solid #e5e5e5;
  color: #999;
}
.myjinxingbox{
  margin-top: 10rpx;
}
.mybfont2{
  color: #F66926;
  font-size: 26rpx;
}
.mybottom{
  border-top: 1rpx solid #eee;
  padding: 15rpx 0rpx;
  display: flex;
}
.mybfont3{
  color: #F66926;
  font-weight: bold;
  margin-right: 8rpx;
  font-size: 30rpx;
}
.mybotbox{
  width:50%;
  border-right: 1rpx solid #eee;
  text-align: center;
  line-height: 30rpx;
  font-size: 28rpx;
}
.mybotbox:last-child{
  border: none;
}

.zanwubox{
  padding-top: 250rpx;
}
.zanwu{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}







