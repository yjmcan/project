/*留言*/
.leaving{
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  z-index: 5000000;
}
.leaving>view:nth-child(1){
  width: 100%;
  height: 100%;
  background: #000;
  opacity: .5;
  z-index: 500;
}
.leaving>view:nth-child(2){
  width: 90%;
  height: 500rpx;
  background: #fff;
  border-radius: 15rpx;
  z-index: 50000;
}
.leaving>view view:nth-child(1){
  width: 95%;
  height: 380rpx;
  margin: 30rpx auto 0;
}
.leaving>view view textarea{
  width: 100%;
  height: 100%;
}
.leaving>view view:nth-child(2){
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-top: 2rpx solid #e5e5e5;
}
.leaving>view view text{
  display: inline-block;
  width: 50%;
  box-sizing: border-box;
  text-align: center;
}
.leaving>view view text:nth-child(1){
  border-right: 2rpx solid #e5e5e5;
}
